<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Participant - Ella Rises</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=DM+Serif+Display&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <ul class="nav-menu">
                <li><a href="/events">Events</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/donate">Donate</a></li>
            </ul>
            <div class="nav-logo">
                <h1><a href="/" style="text-decoration: none; color: inherit;">ELLA RISES</a></h1>
            </div>
        </div>
    </nav>

    <div class="manage-donations-container">
        <div class="manage-donations-wrapper">
            <div class="manage-donations-header">
                <h1 class="manage-donations-title">Add Participant</h1>
                <p class="manage-donations-subtitle">Create a new participant</p>
            </div>

            <% if (typeof error_message !== 'undefined' && error_message && error_message.length > 0) { %>
                <div class="error-message"><%= error_message %></div>
            <% } %>

            <form action="/manage-participants/new" method="POST" class="form">
                <div class="form-group">
                    <label for="user_first_name">First Name</label>
                    <input type="text" id="user_first_name" name="user_first_name" required>
                </div>

                <div class="form-group">
                    <label for="user_last_name">Last Name</label>
                    <input type="text" id="user_last_name" name="user_last_name" required>
                </div>

                <div class="form-group">
                    <label for="user_email">Email</label>
                    <input type="email" id="user_email" name="user_email" required>
                </div>

                <div class="form-group">
                    <label for="user_role">Role</label>
                    <select id="user_role" name="user_role" required>
                        <option value="student">Student</option>
                        <option value="parent">Parent</option>
                        <option value="volunteer">Volunteer</option>
                        <option value="admin">Admin</option>
                    </select>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-primary">Save Participant</button>
                    <a href="/manage-participants" class="btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>


