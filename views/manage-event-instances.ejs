<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Events - Ella Rises</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=DM+Serif+Display&display=swap" rel="stylesheet">
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-static">
        <div class="nav-container">
            <ul class="nav-menu">
                <!-- Events Dropdown -->
                <li class="nav-dropdown">
                    <a href="/events" class="nav-dropdown-trigger">Events</a>
                    <div class="nav-dropdown-content">
                        <a href="/events?filter=upcoming">Upcoming Events</a>
                        <a href="/events?filter=past">Past Events</a>
                    </div>
                </li>
                <!-- About Dropdown -->
                <li class="nav-dropdown">
                    <a href="/about" class="nav-dropdown-trigger">About</a>
                    <div class="nav-dropdown-content">
                        <a href="/about#mission-vision">Mission & Vision</a>
                        <a href="/about#programs">Programs</a>
                        <a href="/about#mariachi">Mariachi</a>
                        <a href="/about#ballet">Ballet Folklorico</a>
                        <a href="/about#steam">STEAM Workshops</a>
                        <a href="/about#summit">Ella Rises Summit</a>
                        <a href="/about#contact">Contact Us</a>
                    </div>
                </li>
                <li><a href="/donate">Donate</a></li>
            </ul>
            <div class="nav-logo">
                <h1><a href="/" style="text-decoration: none; color: inherit;">ELLA RISES</a></h1>
            </div>
            <% if (isLoggedIn) { %>
                <div class="nav-auth">
                    <div class="user-dropdown">
                        <button class="user-dropdown-btn">
                            <%= first_name %> <%= last_name %> ▼
                        </button>
                        <div class="user-dropdown-content">
                            <a href="/dashboard">User Dashboard</a>
                            <a href="/account-info">Account Info</a>
                            <form action="/logout" method="POST" class="dropdown-logout-form">
                                <button type="submit" class="dropdown-logout-btn">Logout</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="nav-auth">
                    <a href="/login" class="btn-signin">Sign In</a>
                    <a href="/register" class="btn-signup">Sign Up</a>
                </div>
            <% } %>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="manage-donations-container">
        <div class="manage-donations-wrapper">
            <!-- Page Header -->
            <div class="manage-donations-header">
                <h1 class="manage-donations-title">Manage <%=event.event_name%> Occurrences</h1>
            </div>

            <!-- Error Message Display -->
            <% if (typeof error_message !== 'undefined' && error_message && error_message.length > 0) { %>
                <div class="error-message">
                    <%= error_message %>
                </div>
            <% } %>
            <a href="/manage-events/new" class="btn-primary">
                + Create Instance
            </a>
            <!-- Events Table -->
            <% if (event && event.length > 0) { %>
                <div class="donations-table-container">
                    <table class="donations-table">
                        <thead>
                            <tr>
                                <th>Occurrence Date</th>
                                <th>Surveys</th>
                                <th>Location</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% event.forEach(function(event) { %>
                                <tr 
                                    class="event-row"
                                    data-template-id="<%= event.event_template_id %>"
                                    data-event-name="<%= event.event_name %>"
                                    data-event-type="<%= event.event_type || 'N/A' %>"
                                    data-event-description="<%= event.event_description || 'No description provided.' %>"
                                    data-event-recurrence="<%= event.event_recurrence_pattern || 'N/A' %>"
                                    data-event-capacity="<%= event.event_default_capacity || 'N/A' %>"
                                    style="cursor: pointer;"
                                >
                                    <td><%= event.event_name %></td>
                                    <td><%= event.event_type %></td>
                                    <td><%= event.event_recurrence_pattern %></td>
                                    <td>
                                        <form 
                                            action="/manage-events/<%= event.event_template_id %>/delete" 
                                            method="POST" 
                                            style="display: inline-block; margin-left: 10px;"
                                            onsubmit="return confirm('Are you sure you want to delete this event occurrence? This will also delete all related surveys for this occurrence.');"
                                            onclick="event.stopPropagation();"
                                        >
                                            <button type="submit" class="btn-delete" style="background-color: #dc3545; color: white; border: none; padding: 5px 10px; border-radius: 4px; cursor: pointer;">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <p class="empty-state-message">No events found.</p>
                </div>
            <% } %>
            <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                <div class="manage-donations-pagination">
                    <% if (currentPage > 1) { %>
                        <a href="/manage-events?page=<%= currentPage - 1 %>" class="pagination-btn">Previous</a>
                    <% } else { %>
                        <span class="pagination-btn disabled">Previous</span>
                    <% } %>
        
                    <div class="pagination-pages">
                        <%
                            const maxVisible = 5; // number of page buttons in the middle window
                            let startPage = Math.max(1, currentPage - 2);
                            let endPage = Math.min(totalPages, currentPage + 2);
        
                            if (endPage - startPage + 1 < maxVisible) {
                                if (startPage === 1) {
                                    endPage = Math.min(totalPages, startPage + maxVisible - 1);
                                } else if (endPage === totalPages) {
                                    startPage = Math.max(1, endPage - maxVisible + 1);
                                }
                            }
                        %>
        
                        <% if (startPage > 1) { %>
                            <!-- First page -->
                            <a href="/manage-events?page=1"
                               class="pagination-page <%= currentPage === 1 ? 'active' : '' %>">
                                1
                            </a>
        
                            <% if (startPage > 2) { %>
                                <span class="pagination-ellipsis">…</span>
                            <% } %>
                        <% } %>
        
                        <!-- Window of pages around current -->
                        <% for (let i = startPage; i <= endPage; i++) { %>
                            <a href="/manage-events?page=<%= i %>"
                               class="pagination-page <%= i === currentPage ? 'active' : '' %>">
                                <%= i %>
                            </a>
                        <% } %>
        
                        <% if (endPage < totalPages) { %>
                            <% if (endPage < totalPages - 1) { %>
                                <span class="pagination-ellipsis">…</span>
                            <% } %>
        
                            <!-- Last page -->
                            <a href="/manage-events?page=<%= totalPages %>"
                               class="pagination-page <%= currentPage === totalPages ? 'active' : '' %>">
                                <%= totalPages %>
                            </a>
                        <% } %>
                    </div>
        
                    <% if (currentPage < totalPages) { %>
                        <a href="/manage-events?page=<%= currentPage + 1 %>" class="pagination-btn">Next</a>
                    <% } else { %>
                        <span class="pagination-btn disabled">Next</span>
                    <% } %>
                </div>
            <% } %>
            <!-- View Details Modal -->
            <div id="view-details-modal" class="modal hidden">
                <div class="modal-content">
                    <h2>Event Template Details</h2>
                    <div class="event-details-container" style="padding: 20px 0;">
                        <div class="detail-row" style="margin-bottom: 15px;">
                            <strong style="display: inline-block; width: 180px;">Event Name:</strong>
                            <span id="detail-event-name"></span>
                        </div>
                        <div class="detail-row" style="margin-bottom: 15px;">
                            <strong style="display: inline-block; width: 180px;">Event Type:</strong>
                            <span id="detail-event-type"></span>
                        </div>
                        <div class="detail-row" style="margin-bottom: 15px;">
                            <strong style="display: inline-block; width: 180px;">Recurrence Pattern:</strong>
                            <span id="detail-event-recurrence"></span>
                        </div>
                        <div class="detail-row" style="margin-bottom: 15px;">
                            <strong style="display: inline-block; width: 180px;">Default Capacity:</strong>
                            <span id="detail-event-capacity"></span>
                        </div>
                        <div class="detail-row" style="margin-bottom: 15px;">
                            <strong style="display: inline-block; width: 180px; vertical-align: top;">Description:</strong>
                            <span id="detail-event-description" style="display: inline-block; max-width: 400px; word-wrap: break-word;"></span>
                        </div>
                    </div>
                    <div class="modal-actions">
                        <button type="button" id="close-details" class="btn-secondary">Close</button>
                    </div>
                </div>
            </div>

            <!-- Add Instance Modal -->
            <div id="add-instance-modal" class="modal hidden">
                <div class="modal-content">
                    <h2>Create Event Instance</h2>
                    <form id="add-instance-form" method="POST">
                        <input type="hidden" name="event_name" id="instance_event_name">

                        <div class="form-group">
                            <label for="event_date_time_start">Start Date &amp; Time</label>
                            <input type="datetime-local" id="event_date_time_start" name="event_date_time_start" required>
                        </div>

                        <div class="form-group">
                            <label for="event_date_time_end">End Date &amp; Time</label>
                            <input type="datetime-local" id="event_date_time_end" name="event_date_time_end" required>
                        </div>

                        <div class="form-group">
                            <label for="event_location">Location</label>
                            <input type="text" id="event_location" name="event_location" required>
                        </div>

                        <div class="form-group">
                            <label for="event_capacity">Capacity</label>
                            <input type="number" id="event_capacity" name="event_capacity" min="0">
                        </div>

                        <div class="form-group">
                            <label for="event_registration_deadline">Registration Deadline</label>
                            <input type="datetime-local" id="event_registration_deadline" name="event_registration_deadline">
                        </div>

                        <div class="modal-actions">
                            <button type="submit" class="btn-primary">Save Instance</button>
                            <button type="button" id="cancel-instance" class="btn-secondary">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>Ella Rises</h3>
                <p>Empowering young women through culturally rooted educational programs.</p>
            </div>
            <div class="footer-section">
                <h4>Quick Links</h4>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/events">Event Information</a></li>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/donate">Donate</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Programs</h4>
                <ul>
                    <li><a href="#">Mariachi</a></li>
                    <li><a href="#">Ballet Folklorico</a></li>
                    <li><a href="#">STEAM Workshops</a></li>
                    <li><a href="#">Ella Rises Summit</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Get Involved</h4>
                <ul>
                    <li><a href="#">Volunteer</a></li>
                    <li><a href="#">Donate</a></li>
                    <li><a href="#">Sponsor</a></li>
                    <li><a href="#">Newsletter</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Ella Rises. All rights reserved.</p>
        </div>
    </footer>

    <script>
        // User dropdown functionality and Add Instance modal logic
        document.addEventListener('DOMContentLoaded', function() {
            const userDropdown = document.querySelector('.user-dropdown');
            const dropdownBtn = document.querySelector('.user-dropdown-btn');
            
            if (dropdownBtn) {
                dropdownBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    userDropdown.classList.toggle('active');
                });
            }
            
            // Close dropdown when clicking outside
            document.addEventListener('click', function(e) {
                if (userDropdown && !userDropdown.contains(e.target)) {
                    userDropdown.classList.remove('active');
                }
            });

            // Navbar show/hide on scroll - only visible at top
            const navbar = document.querySelector('.navbar');
            
            window.addEventListener('scroll', function() {
                const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
                
                if (scrollTop < 64) {
                    navbar.classList.remove('hidden');
                } else {
                    navbar.classList.add('hidden');
                }
            });
    
            // Add Instance modal logic
            const addInstanceButtons = document.querySelectorAll('.btn-add-instance');
            const modal = document.getElementById('add-instance-modal');
            const form = document.getElementById('add-instance-form');
            const eventNameInput = document.getElementById('instance_event_name');
            const cancelBtn = document.getElementById('cancel-instance');
    
            if (modal && form && eventNameInput && addInstanceButtons.length > 0) {
                addInstanceButtons.forEach(btn => {
                    btn.addEventListener('click', function() {
                        const templateId = this.getAttribute('data-template-id');
                        const eventName = this.getAttribute('data-event-name');
    
                        // Set form action to the correct POST route including template_id
                        form.action = '/manage-events/' + templateId + '/new';
    
                        // Pre-fill hidden event name field
                        eventNameInput.value = eventName;
    
                        // Show modal
                        modal.classList.remove('hidden');
                    });
                });
    
                if (cancelBtn) {
                    cancelBtn.addEventListener('click', function() {
                        modal.classList.add('hidden');
                    });
                }
    
                // Optional: close modal when clicking outside content
                modal.addEventListener('click', function(e) {
                    if (e.target === modal) {
                        modal.classList.add('hidden');
                    }
                });
            }

            // View Details modal logic
            const detailsModal = document.getElementById('view-details-modal');
            const closeDetailsBtn = document.getElementById('close-details');

            // Function to populate and show the details modal
            function showEventDetails(row) {
                // Get all data attributes from the row
                const eventName = row.getAttribute('data-event-name');
                const eventType = row.getAttribute('data-event-type');
                const eventDescription = row.getAttribute('data-event-description');
                const eventRecurrence = row.getAttribute('data-event-recurrence');
                const eventCapacity = row.getAttribute('data-event-capacity');

                // Populate modal with data
                document.getElementById('detail-event-name').textContent = eventName;
                document.getElementById('detail-event-type').textContent = eventType;
                document.getElementById('detail-event-description').textContent = eventDescription;
                document.getElementById('detail-event-recurrence').textContent = eventRecurrence;
                document.getElementById('detail-event-capacity').textContent = eventCapacity;

                // Show modal
                detailsModal.classList.remove('hidden');
            }

            // Make table rows clickable
            const eventRows = document.querySelectorAll('.event-row');
            if (detailsModal && eventRows.length > 0) {
                eventRows.forEach(row => {
                    row.addEventListener('click', function(e) {
                        // Only trigger if clicking directly on the row, not on buttons/forms
                        if (e.target.closest('button, form') === null) {
                            showEventDetails(this);
                        }
                    });
                });
            }

            // View Details button logic (still works, but row click is primary)
            const viewDetailsButtons = document.querySelectorAll('.btn-view-details');
            if (detailsModal && viewDetailsButtons.length > 0) {
                viewDetailsButtons.forEach(btn => {
                    btn.addEventListener('click', function(e) {
                        // Get the parent row
                        const row = this.closest('.event-row');
                        if (row) {
                            showEventDetails(row);
                        }
                    });
                });
            }

            if (detailsModal) {
                if (closeDetailsBtn) {
                    closeDetailsBtn.addEventListener('click', function() {
                        detailsModal.classList.add('hidden');
                    });
                }

                // Close modal when clicking outside content
                detailsModal.addEventListener('click', function(e) {
                    if (e.target === detailsModal) {
                        detailsModal.classList.add('hidden');
                    }
                });
            }
        });
    </script>
</body>
</html>
