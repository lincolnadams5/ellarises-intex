<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Donations - Ella Rises</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=DM+Serif+Display&display=swap" rel="stylesheet">
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-static">
        <div class="nav-container">
            <ul class="nav-menu">
                <li class="nav-dropdown">
                    <a href="/events" class="nav-dropdown-trigger">Events</a>
                    <div class="nav-dropdown-content">
                        <a href="/events?filter=upcoming">Upcoming Events</a>
                        <a href="/events?filter=past">Past Events</a>
                    </div>
                </li>
                <li class="nav-dropdown">
                    <a href="/about" class="nav-dropdown-trigger">About</a>
                    <div class="nav-dropdown-content">
                        <a href="/about#mission-vision">Mission & Vision</a>
                        <a href="/about#programs">Programs</a>
                        <a href="/about#mariachi">Mariachi</a>
                        <a href="/about#ballet">Ballet Folklorico</a>
                        <a href="/about#steam">STEAM Workshops</a>
                        <a href="/about#summit">Ella Rises Summit</a>
                        <a href="/about#contact">Contact Us</a>
                    </div>
                </li>
                <li><a href="/donate">Donate</a></li>
            </ul>
            <div class="nav-logo">
                <h1><a href="/" style="text-decoration: none; color: inherit;">ELLA RISES</a></h1>
            </div>
            <% if (isLoggedIn) { %>
                <div class="nav-auth">
                    <div class="user-dropdown">
                        <button class="user-dropdown-btn">
                            <%= first_name %> <%= last_name %> ‚ñº
                        </button>
                        <div class="user-dropdown-content">
                            <a href="/dashboard">User Dashboard</a>
                            <a href="/account-info">Account Info</a>
                            <form action="/logout" method="POST" class="dropdown-logout-form">
                                <button type="submit" class="dropdown-logout-btn">Logout</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="nav-auth">
                    <a href="/login" class="btn-signin">Sign In</a>
                    <a href="/register" class="btn-signup">Sign Up</a>
                </div>
            <% } %>
        </div>
    </nav>

    <!-- Breadcrumb -->
    <div class="breadcrumb">
        <a href="/dashboard">‚Üê Back to Dashboard</a>
    </div>

    <!-- Main Content -->
    <div class="manage-donations-container">
        <div class="manage-donations-wrapper">
            <!-- Page Header -->
            <div class="manage-donations-header">
                <h1 class="manage-donations-title">Manage Donations</h1>
                <p class="manage-donations-subtitle">Create new, or select a donation to edit or delete</p>
            </div>

            <!-- Total Donations Summary -->
            <%
                function formatMoney(amount) {
                    if (typeof amount !== "number") amount = Number(amount);
                    if (isNaN(amount)) return "$0.00";
                    return amount.toLocaleString('en-US', { style: 'currency', currency: 'USD', minimumFractionDigits: 2 });
                }
            %>
            <% if (
                (typeof totalDonations !== 'undefined' && totalDonations !== null) ||
                (typeof totalYearlyDonations !== 'undefined' && totalYearlyDonations !== null) ||
                (typeof totalMonthlyDonations !== 'undefined' && totalMonthlyDonations !== null)
            ) { %>
                <div class="donation-summary-card" style="display: flex; gap: 2rem; justify-content: center; margin-bottom: 2.5rem; flex-wrap: wrap;">
                    <% if (typeof totalDonations !== 'undefined' && totalDonations !== null) { %>
                        <div class="donation-stat" style="background: #f8fafc; box-shadow: 0 2px 8px rgba(44,62,80,0.05); padding: 1.5rem 2.5rem; border-radius: 18px; min-width: 160px; text-align: center;">
                            <div style="font-size: 1.2rem; color: #71717a; letter-spacing:0.5px; margin-bottom: 4px;">Total Donations</div>
                            <div style="font-size: 2rem; font-weight: 700; color: #2196f3;"><%= formatMoney(totalDonations) %></div>
                        </div>
                    <% } %>
                    <% if (typeof totalYearlyDonations !== 'undefined' && totalYearlyDonations !== null) { %>
                        <div class="donation-stat" style="background: #f8fafc; box-shadow: 0 2px 8px rgba(44,62,80,0.05); padding: 1.5rem 2.5rem; border-radius: 18px; min-width: 160px; text-align: center;">
                            <div style="font-size: 1.2rem; color: #71717a; letter-spacing:0.5px; margin-bottom: 4px;"><%= year %> Donations</div>
                            <div style="font-size: 2rem; font-weight: 700; color: #47af6d;"><%= formatMoney(totalYearlyDonations) %></div>
                        </div>
                    <% } %>
                    <% if (typeof totalMonthlyDonations !== 'undefined' && totalMonthlyDonations !== null) { %>
                        <div class="donation-stat" style="background: #f8fafc; box-shadow: 0 2px 8px rgba(44,62,80,0.05); padding: 1.5rem 2.5rem; border-radius: 18px; min-width: 160px; text-align: center;">
                            <div style="font-size: 1.2rem; color: #71717a; letter-spacing:0.5px; margin-bottom: 4px;"><%= month %> Donations</div>
                            <div style="font-size: 2rem; font-weight: 700; color: #ec8a34;"><%= formatMoney(totalMonthlyDonations) %></div>
                        </div>
                    <% } %>
                </div>
            <% } %>
            
            <div style="display: flex; gap: 1rem; align-items: center; margin-bottom: 1.5rem; flex-wrap: wrap;">
                <a href="/manage-donations/new" class="btn-primary">+ Add Donation</a>
                <a href="/manage-donations/export" class="btn-primary" style="background-color: #28a745; text-decoration: none; padding: 0.5rem 1rem; border-radius: 4px; color: white; display: inline-flex; align-items: center; gap: 0.5rem;">
                    üì• Download Excel
                </a>
                
                <!-- Search Bar -->
                <form action="/manage-donations" method="GET" style="display: flex; gap: 0.5rem; flex: 1; min-width: 250px; max-width: 400px;">
                    <input 
                        type="text" 
                        name="search"
                        placeholder="Search by donor name..." 
                        value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
                        style="flex: 1; padding: 0.5rem 1rem; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 0.95rem;"
                    >
                    <button type="submit" style="padding: 0.5rem 1rem; background-color: var(--color-secondary); color: white; border: none; border-radius: 8px; cursor: pointer;">
                        Search
                    </button>
                    <% if (typeof searchQuery !== 'undefined' && searchQuery && searchQuery.trim() !== '') { %>
                    <a href="/manage-donations" style="padding: 0.5rem 1rem; background-color: #6c757d; color: white; border-radius: 8px; text-decoration: none;">
                        Clear
                    </a>
                    <% } %>
                </form>
            </div>
            
            <% if (typeof searchQuery !== 'undefined' && searchQuery && searchQuery.trim() !== '') { %>
            <div id="search-results-info" data-search="<%= searchQuery %>" style="margin-bottom: 1rem; color: #71717a; font-size: 0.95rem;">
                Showing results for "<strong><%= searchQuery %></strong>" (<%= typeof totalCount !== 'undefined' ? totalCount : 0 %> found)
            </div>
            <% } %>

            <!-- Error Message Display -->
            <% if (typeof error_message !== 'undefined' && error_message && error_message.length > 0) { %>
                <div class="error-message"><%= error_message %></div>
            <% } %>

            <!-- Donations Table -->
            <% if (donation && donation.length > 0) { %>
                <div class="donations-table-container">
                    <table class="donations-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Date</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% donation.forEach(function(donation) { %>
                                <%
                                    let formattedDate;
                                    if (donation.donation_date !== null) {
                                        const date = new Date(donation.donation_date);
                                        const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
                                        formattedDate = months[date.getMonth()] + ' ' + date.getDate() + ', ' + date.getFullYear();
                                    } else {
                                        formattedDate = 'N/A';
                                    }
                                    const amount = parseFloat(donation.donation_amount).toFixed(2);
                                %>
                                <tr 
                                    class="donation-row"
                                    data-donation-id="<%= donation.donation_id %>"
                                    data-user-id="<%= donation.user_id %>"
                                    data-first-name="<%= donation.user_first_name %>"
                                    data-last-name="<%= donation.user_last_name %>"
                                    data-email="<%= donation.user_email %>"
                                    data-date="<%= formattedDate %>"
                                    data-date-raw="<%= donation.donation_date ? new Date(donation.donation_date).toISOString().split('T')[0] : '' %>"
                                    data-amount="<%= amount %>"
                                    style="cursor: pointer;"
                                >
                                    <td><%= donation.user_first_name %> <%= donation.user_last_name %></td>
                                    <td><%= donation.user_email %></td>
                                    <td><%= formattedDate %></td>
                                    <td>$<%= amount %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>

                <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                    <div class="manage-donations-pagination">
                        <%
                            var searchParam = '';
                            if (typeof searchQuery !== 'undefined' && searchQuery && searchQuery.trim() !== '') {
                                searchParam = '&search=' + encodeURIComponent(searchQuery);
                            }
                        %>
                        <% if (currentPage > 1) { %>
                            <a href="/manage-donations?page=<%= currentPage - 1 %><%= searchParam %>" class="pagination-btn">Previous</a>
                        <% } else { %>
                            <span class="pagination-btn disabled">Previous</span>
                        <% } %>
                        <div class="pagination-pages">
                            <%
                                const maxVisible = 5;
                                let startPage = Math.max(1, currentPage - 2);
                                let endPage = Math.min(totalPages, currentPage + 2);
                                if (endPage - startPage + 1 < maxVisible) {
                                    if (startPage === 1) {
                                        endPage = Math.min(totalPages, startPage + maxVisible - 1);
                                    } else if (endPage === totalPages) {
                                        startPage = Math.max(1, endPage - maxVisible + 1);
                                    }
                                }
                            %>
                            <% if (startPage > 1) { %>
                                <a href="/manage-donations?page=1<%= searchParam %>" class="pagination-page <%= currentPage === 1 ? 'active' : '' %>">1</a>
                                <% if (startPage > 2) { %><span class="pagination-ellipsis">‚Ä¶</span><% } %>
                            <% } %>
                            <% for (let i = startPage; i <= endPage; i++) { %>
                                <a href="/manage-donations?page=<%= i %><%= searchParam %>" class="pagination-page <%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                            <% } %>
                            <% if (endPage < totalPages) { %>
                                <% if (endPage < totalPages - 1) { %><span class="pagination-ellipsis">‚Ä¶</span><% } %>
                                <a href="/manage-donations?page=<%= totalPages %><%= searchParam %>" class="pagination-page <%= currentPage === totalPages ? 'active' : '' %>"><%= totalPages %></a>
                            <% } %>
                        </div>
                        <% if (currentPage < totalPages) { %>
                            <a href="/manage-donations?page=<%= currentPage + 1 %><%= searchParam %>" class="pagination-btn">Next</a>
                        <% } else { %>
                            <span class="pagination-btn disabled">Next</span>
                        <% } %>
                    </div>
                <% } %>
            <% } else { %>
                <div class="empty-state">
                    <p class="empty-state-message">No donations found.</p>
                </div>
            <% } %>

            <!-- View Details Modal -->
            <div id="view-details-modal" class="modal hidden">
                <div class="modal-content">
                    <h2>Donation Details</h2>
                    <div class="event-details-container">
                        <div class="detail-row">
                            <strong class="detail-label">Donor Name:</strong>
                            <span id="detail-donor-name"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">Email:</strong>
                            <span id="detail-email"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">Donation Date:</strong>
                            <span id="detail-date"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">Donation Amount:</strong>
                            <span id="detail-amount"></span>
                        </div>
                    </div>
                    <div class="modal-actions">
                        <button type="button" id="btn-edit-donation" class="btn-primary">Edit</button>
                        <button type="button" id="btn-delete-donation" class="btn-delete">Delete</button>
                        <button type="button" id="close-details" class="btn-secondary">Close</button>
                    </div>
                </div>
            </div>

            <!-- Delete Confirmation Modal -->
            <div id="delete-confirm-modal" class="modal hidden">
                <div class="modal-content">
                    <h2>Confirm Deletion</h2>
                    <p>Are you sure you want to delete this donation? This action cannot be undone.</p>
                    <div class="modal-actions">
                        <form id="delete-donation-form" method="POST" style="display: inline-block;">
                            <button type="submit" class="btn-delete">Yes, Delete</button>
                        </form>
                        <button type="button" id="cancel-delete" class="btn-secondary">Cancel</button>
                    </div>
                </div>
            </div>

            <!-- Edit Donation Modal -->
            <div id="edit-donation-modal" class="modal hidden">
                <div class="modal-content">
                    <h2>Edit Donation</h2>
                    <form id="edit-donation-form" method="POST">
                        <div class="form-group">
                            <label for="edit_user_id">User ID</label>
                            <input type="number" id="edit_user_id" name="user_id" min="1" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_donation_amount">Amount (USD)</label>
                            <input type="number" id="edit_donation_amount" name="donation_amount" step="0.01" min="0" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_donation_date">Donation Date</label>
                            <input type="date" id="edit_donation_date" name="donation_date" required>
                        </div>
                        <div class="modal-actions">
                            <button type="submit" class="btn-primary">Save Changes</button>
                            <button type="button" id="cancel-edit-donation" class="btn-secondary">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>Ella Rises</h3>
                <p>Empowering young women through culturally rooted educational programs.</p>
            </div>
            <div class="footer-section">
                <h4>Quick Links</h4>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/events">Event Information</a></li>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/about#contact">Contact</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Programs</h4>
                <ul>
                    <li><a href="/about#mariachi">Mariachi</a></li>
                    <li><a href="/about#ballet">Ballet Folklorico</a></li>
                    <li><a href="/about#steam">STEAM Workshops</a></li>
                    <li><a href="/about#summit">Ella Rises Summit</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Get Involved</h4>
                <ul>
                    <li><a href="/about#contact">Volunteer</a></li>
                    <li><a href="/donate">Donate</a></li>
                    <li><a href="/about#contact">Sponsor</a></li>
                    <li><a href="/analytics">Dashboard</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Ella Rises. All rights reserved.</p>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // User dropdown functionality
            const userDropdown = document.querySelector('.user-dropdown');
            const dropdownBtn = document.querySelector('.user-dropdown-btn');

            if (dropdownBtn) {
                dropdownBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    userDropdown.classList.toggle('active');
                });
            }

            document.addEventListener('click', function(e) {
                if (userDropdown && !userDropdown.contains(e.target)) {
                    userDropdown.classList.remove('active');
                }
            });

            // Current row being viewed
            let currentRow = null;

            // Modal elements
            const detailsModal = document.getElementById('view-details-modal');
            const editModal = document.getElementById('edit-donation-modal');
            const deleteModal = document.getElementById('delete-confirm-modal');
            const closeDetailsBtn = document.getElementById('close-details');
            const editBtn = document.getElementById('btn-edit-donation');
            const deleteBtn = document.getElementById('btn-delete-donation');
            const editForm = document.getElementById('edit-donation-form');
            const deleteForm = document.getElementById('delete-donation-form');
            const cancelEditBtn = document.getElementById('cancel-edit-donation');
            const cancelDeleteBtn = document.getElementById('cancel-delete');

            // Show details modal
            function showDonationDetails(row) {
                currentRow = row;
                document.getElementById('detail-donor-name').textContent = row.getAttribute('data-first-name') + ' ' + row.getAttribute('data-last-name');
                document.getElementById('detail-email').textContent = row.getAttribute('data-email');
                document.getElementById('detail-date').textContent = row.getAttribute('data-date');
                document.getElementById('detail-amount').textContent = '$' + row.getAttribute('data-amount');
                detailsModal.classList.remove('hidden');
            }

            // Make table rows clickable
            const donationRows = document.querySelectorAll('.donation-row');
            donationRows.forEach(row => {
                row.addEventListener('click', function(e) {
                    if (e.target.closest('button, form') === null) {
                        showDonationDetails(this);
                    }
                });
            });

            // Close details modal
            if (closeDetailsBtn) {
                closeDetailsBtn.addEventListener('click', () => detailsModal.classList.add('hidden'));
            }
            detailsModal.addEventListener('click', (e) => {
                if (e.target === detailsModal) detailsModal.classList.add('hidden');
            });

            // Edit button - open edit modal
            if (editBtn) {
                editBtn.addEventListener('click', function() {
                    if (!currentRow) return;
                    editForm.action = '/manage-donations/' + currentRow.getAttribute('data-donation-id') + '/update';
                    document.getElementById('edit_user_id').value = currentRow.getAttribute('data-user-id');
                    document.getElementById('edit_donation_amount').value = currentRow.getAttribute('data-amount');
                    document.getElementById('edit_donation_date').value = currentRow.getAttribute('data-date-raw');
                    detailsModal.classList.add('hidden');
                    editModal.classList.remove('hidden');
                });
            }

            // Delete button - open confirmation modal
            if (deleteBtn) {
                deleteBtn.addEventListener('click', function() {
                    if (!currentRow) return;
                    deleteForm.action = '/manage-donations/' + currentRow.getAttribute('data-donation-id') + '/delete';
                    detailsModal.classList.add('hidden');
                    deleteModal.classList.remove('hidden');
                });
            }

            // Cancel edit
            if (cancelEditBtn) {
                cancelEditBtn.addEventListener('click', () => editModal.classList.add('hidden'));
            }
            editModal.addEventListener('click', (e) => {
                if (e.target === editModal) editModal.classList.add('hidden');
            });

            // Cancel delete
            if (cancelDeleteBtn) {
                cancelDeleteBtn.addEventListener('click', () => deleteModal.classList.add('hidden'));
            }
            deleteModal.addEventListener('click', (e) => {
                if (e.target === deleteModal) deleteModal.classList.add('hidden');
            });
        });
    </script>
</body>
</html>
