<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Milestones - Ella Rises</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=DM+Serif+Display&display=swap" rel="stylesheet">
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-static">
        <div class="nav-container">
            <ul class="nav-menu">
                <!-- Events Dropdown -->
                <li class="nav-dropdown">
                    <a href="/events" class="nav-dropdown-trigger">Events</a>
                    <div class="nav-dropdown-content">
                        <a href="/events?filter=upcoming">Upcoming Events</a>
                        <a href="/events?filter=past">Past Events</a>
                    </div>
                </li>
                <!-- About Dropdown -->
                <li class="nav-dropdown">
                    <a href="/about" class="nav-dropdown-trigger">About</a>
                    <div class="nav-dropdown-content">
                        <a href="/about#mission-vision">Mission & Vision</a>
                        <a href="/about#programs">Programs</a>
                        <a href="/about#mariachi">Mariachi</a>
                        <a href="/about#ballet">Ballet Folklorico</a>
                        <a href="/about#steam">STEAM Workshops</a>
                        <a href="/about#summit">Ella Rises Summit</a>
                        <a href="/about#contact">Contact Us</a>
                    </div>
                </li>
                <li><a href="/donate">Donate</a></li>
            </ul>
            <div class="nav-logo">
                <h1><a href="/" style="text-decoration: none; color: inherit;">ELLA RISES</a></h1>
            </div>
            <% if (isLoggedIn) { %>
                <div class="nav-auth">
                    <div class="user-dropdown">
                        <button class="user-dropdown-btn">
                            <%= first_name %> <%= last_name %> ▼
                        </button>
                        <div class="user-dropdown-content">
                            <a href="/dashboard">User Dashboard</a>
                            <a href="/account-info">Account Info</a>
                            <form action="/logout" method="POST" class="dropdown-logout-form">
                                <button type="submit" class="dropdown-logout-btn">Logout</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="nav-auth">
                    <a href="/login" class="btn-signin">Sign In</a>
                    <a href="/register" class="btn-signup">Sign Up</a>
                </div>
            <% } %>
        </div>
    </nav>

    <!-- Breadcrumb -->
    <div class="breadcrumb">
        <a href="/dashboard">← Back to Dashboard</a>
    </div>

    <!-- Main Content -->
    <div class="manage-donations-container">
        <div class="manage-donations-wrapper">
            <!-- Page Header -->
            <div class="manage-donations-header">
                <h1 class="manage-donations-title">Manage Milestones</h1>
                <p class="manage-donations-subtitle">View all milestones</p>
            </div>

            <a href="/manage-milestones/new" class="btn-primary">
                + Add Milestone
            </a>

            <!-- Error Message Display -->
            <% if (typeof error_message !== 'undefined' && error_message && error_message.length > 0) { %>
                <div class="error-message">
                    <%= error_message %>
                </div>
            <% } %>

            <!-- Milestones Table -->
            <% if (milestone && milestone.length > 0) { %>
                <div class="donations-table-container">
                    <table class="donations-table">
                        <thead>
                            <tr>
                                <th>Milestone Title</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% milestone.forEach(function(milestone) { %>
                                <tr 
                                    class="milestone-row"
                                    data-milestone-id="<%= milestone.milestone_id %>"
                                    data-milestone-title="<%= milestone.milestone_title %>"
                                    style="cursor: pointer;"
                                >
                                    <td><%= milestone.milestone_title %></td>
                                    <td>
                                        <button 
                                            type="button"
                                            class="btn-edit" 
                                            style="background-color: #007bff; color: white; border: none; padding: 5px 10px; border-radius: 4px; cursor: pointer; margin-right: 5px;"
                                            onclick="event.stopPropagation(); openEditMilestoneModal(this);"
                                        >
                                            Edit
                                        </button>
                                        <form 
                                            action="/manage-milestones/<%= milestone.milestone_id %>/delete" 
                                            method="POST" 
                                            style="display: inline-block;"
                                            onsubmit="return confirm('Are you sure you want to delete this milestone?');"
                                            onclick="event.stopPropagation();"
                                        >
                                            <button type="submit" class="btn-delete" style="background-color: #dc3545; color: white; border: none; padding: 5px 10px; border-radius: 4px; cursor: pointer;">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <p class="empty-state-message">No milestones found.</p>
                </div>
            <% } %>
            <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                <div class="manage-donations-pagination">
                    <% if (currentPage > 1) { %>
                        <a href="/manage-milestones?page=<%= currentPage - 1 %>" class="pagination-btn">Previous</a>
                    <% } else { %>
                        <span class="pagination-btn disabled">Previous</span>
                    <% } %>
        
                    <div class="pagination-pages">
                        <%
                            const maxVisible = 5; // number of page buttons in the middle window
                            let startPage = Math.max(1, currentPage - 2);
                            let endPage = Math.min(totalPages, currentPage + 2);
        
                            if (endPage - startPage + 1 < maxVisible) {
                                if (startPage === 1) {
                                    endPage = Math.min(totalPages, startPage + maxVisible - 1);
                                } else if (endPage === totalPages) {
                                    startPage = Math.max(1, endPage - maxVisible + 1);
                                }
                            }
                        %>
        
                        <% if (startPage > 1) { %>
                            <!-- First page -->
                            <a href="/manage-milestones?page=1"
                               class="pagination-page <%= currentPage === 1 ? 'active' : '' %>">
                                1
                            </a>
        
                            <% if (startPage > 2) { %>
                                <span class="pagination-ellipsis">…</span>
                            <% } %>
                        <% } %>
        
                        <!-- Window of pages around current -->
                        <% for (let i = startPage; i <= endPage; i++) { %>
                            <a href="/manage-milestones?page=<%= i %>"
                               class="pagination-page <%= i === currentPage ? 'active' : '' %>">
                                <%= i %>
                            </a>
                        <% } %>
        
                        <% if (endPage < totalPages) { %>
                            <% if (endPage < totalPages - 1) { %>
                                <span class="pagination-ellipsis">…</span>
                            <% } %>
        
                            <!-- Last page -->
                            <a href="/manage-milestones?page=<%= totalPages %>"
                               class="pagination-page <%= currentPage === totalPages ? 'active' : '' %>">
                                <%= totalPages %>
                            </a>
                        <% } %>
                    </div>
        
                    <% if (currentPage < totalPages) { %>
                        <a href="/manage-milestones?page=<%= currentPage + 1 %>" class="pagination-btn">Next</a>
                    <% } else { %>
                        <span class="pagination-btn disabled">Next</span>
                    <% } %>
                </div>
            <% } %>

            <!-- View Details Modal -->
            <div id="view-details-modal" class="modal hidden">
                <div class="modal-content">
                    <h2>Milestone Details</h2>
                    <div class="milestone-details-container" style="padding: 20px 0;">
                        <div class="detail-row" style="margin-bottom: 15px;">
                            <strong style="display: inline-block; width: 180px;">Milestone Title:</strong>
                            <span id="detail-milestone-title"></span>
                        </div>
                    </div>
                    <div class="modal-actions">
                        <button type="button" id="close-details" class="btn-secondary">Close</button>
                    </div>
                </div>
            </div>

            <!-- Edit Milestone Modal -->
            <div id="edit-milestone-modal" class="modal hidden">
                <div class="modal-content">
                    <h2>Edit Milestone</h2>
                    <form id="edit-milestone-form" method="POST">
                        <div class="form-group">
                            <label for="edit_milestone_title">Milestone Title</label>
                            <input type="text" id="edit_milestone_title" name="milestone_title" required>
                        </div>
                        <div class="modal-actions">
                            <button type="submit" class="btn-primary">Save Changes</button>
                            <button type="button" id="cancel-edit-milestone" class="btn-secondary">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>Ella Rises</h3>
                <p>Empowering young women through culturally rooted educational programs.</p>
            </div>
            <div class="footer-section">
                <h4>Quick Links</h4>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/events">Event Information</a></li>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/about#contact">Contact</a></li>
                    <li><a href="/teapot">Teapot</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Programs</h4>
                <ul>
                    <li><a href="/about#mariachi">Mariachi</a></li>
                    <li><a href="/about#ballet">Ballet Folklorico</a></li>
                    <li><a href="/about#steam">STEAM Workshops</a></li>
                    <li><a href="/about#summit">Ella Rises Summit</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Get Involved</h4>
                <ul>
                    <li><a href="/about#contact">Volunteer</a></li>
                    <li><a href="/donate">Donate</a></li>
                    <li><a href="/about#contact">Sponsor</a></li>
                    <li><a href="/analytics">Dashboard</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Ella Rises. All rights reserved.</p>
        </div>
    </footer>

    <script>
        // User dropdown functionality
        document.addEventListener('DOMContentLoaded', function() {
            const userDropdown = document.querySelector('.user-dropdown');
            const dropdownBtn = document.querySelector('.user-dropdown-btn');
            
            if (dropdownBtn) {
                dropdownBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    userDropdown.classList.toggle('active');
                });
            }
            
            // Close dropdown when clicking outside
            document.addEventListener('click', function(e) {
                if (userDropdown && !userDropdown.contains(e.target)) {
                    userDropdown.classList.remove('active');
                }
            });

            // View Details modal logic
            const detailsModal = document.getElementById('view-details-modal');
            const closeDetailsBtn = document.getElementById('close-details');

            // Function to populate and show the details modal
            function showMilestoneDetails(row) {
                // Get all data attributes from the row
                const milestoneTitle = row.getAttribute('data-milestone-title');

                // Populate modal with data
                document.getElementById('detail-milestone-title').textContent = milestoneTitle;

                // Show modal
                detailsModal.classList.remove('hidden');
            }

            // Make table rows clickable
            const milestoneRows = document.querySelectorAll('.milestone-row');
            if (detailsModal && milestoneRows.length > 0) {
                milestoneRows.forEach(row => {
                    row.addEventListener('click', function(e) {
                        // Only trigger if clicking directly on the row, not on buttons/forms
                        if (e.target.closest('button, form') === null) {
                            showMilestoneDetails(this);
                        }
                    });
                });
            }

            if (detailsModal) {
                if (closeDetailsBtn) {
                    closeDetailsBtn.addEventListener('click', function() {
                        detailsModal.classList.add('hidden');
                    });
                }

                // Close modal when clicking outside content
                detailsModal.addEventListener('click', function(e) {
                    if (e.target === detailsModal) {
                        detailsModal.classList.add('hidden');
                    }
                });
            }

            // Edit Milestone modal logic
            const editModal = document.getElementById('edit-milestone-modal');
            const editForm = document.getElementById('edit-milestone-form');
            const cancelEditBtn = document.getElementById('cancel-edit-milestone');

            // Function to open edit modal and populate with data
            window.openEditMilestoneModal = function(button) {
                const row = button.closest('.milestone-row');
                const milestoneId = row.getAttribute('data-milestone-id');
                const milestoneTitle = row.getAttribute('data-milestone-title');

                // Set form action
                editForm.action = '/manage-milestones/' + milestoneId + '/update';

                // Populate form fields
                document.getElementById('edit_milestone_title').value = milestoneTitle;

                // Show modal
                editModal.classList.remove('hidden');
            };

            if (editModal) {
                if (cancelEditBtn) {
                    cancelEditBtn.addEventListener('click', function() {
                        editModal.classList.add('hidden');
                    });
                }

                // Close modal when clicking outside content
                editModal.addEventListener('click', function(e) {
                    if (e.target === editModal) {
                        editModal.classList.add('hidden');
                    }
                });
            }
        });
    </script>
</body>
</html>
