                    <% if (currentLang === 'en') { %>
                        <a href="/lang/es" class="lang-toggle" title="Cambiar a Espa√±ol" aria-label="Switch to Spanish">üá™üá∏</a>
                    <% } else { %>
                        <a href="/lang/en" class="lang-toggle" title="Switch to English" aria-label="Switch to English">üá¨üáß</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Breadcrumb -->
    <div class="breadcrumb">
        <a href="/dashboard">‚Üê Back to Dashboard</a>
    </div>

    <!-- Main Content -->
    <div class="manage-donations-container">
        <div class="manage-donations-wrapper">
            <!-- Page Header -->
            <div class="manage-donations-header">
                <h1 class="manage-donations-title">Manage Event Templates</h1>
                <p class="manage-donations-subtitle">Create new, or select an event template to edit or delete</p>
            </div>

            <!-- Error Message Display -->
            <% if (typeof error_message !== 'undefined' && error_message && error_message.length > 0) { %>
                <div class="error-message"><%= error_message %></div>
            <% } %>

            <div style="display: flex; gap: 1rem; align-items: center; margin-bottom: 1.5rem; flex-wrap: wrap;">
                <a href="/manage-events/new" class="btn-primary btn-create-event">+ Create New Event Template</a>
                
                <!-- Search Bar -->
                <form action="/manage-events" method="GET" style="display: flex; gap: 0.5rem; flex: 1; min-width: 250px; max-width: 400px;">
                    <input 
                        type="text" 
                        name="search"
                        placeholder="Search by event name..." 
                        value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
                        style="flex: 1; padding: 0.5rem 1rem; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 0.95rem;"
                    >
                    <button type="submit" style="padding: 0.5rem 1rem; background-color: var(--color-secondary); color: white; border: none; border-radius: 8px; cursor: pointer;">
                        Search
                    </button>
                    <% if (typeof searchQuery !== 'undefined' && searchQuery && searchQuery.trim() !== '') { %>
                    <a href="/manage-events" style="padding: 0.5rem 1rem; background-color: #6c757d; color: white; border-radius: 8px; text-decoration: none;">
                        Clear
                    </a>
                    <% } %>
                </form>
            </div>
            
            <% if (typeof searchQuery !== 'undefined' && searchQuery && searchQuery.trim() !== '') { %>
            <div style="margin-bottom: 1rem; color: #71717a; font-size: 0.95rem;">
                Showing results for "<strong><%= searchQuery %></strong>" (<%= typeof totalCount !== 'undefined' ? totalCount : 0 %> found)
            </div>
            <% } %>

            <!-- Events Table -->
            <% if (event && event.length > 0) { %>
                <div class="donations-table-container">
                    <table class="donations-table">
                        <thead>
                            <tr>
                                <th>Event Name</th>
                                <th>Event Type</th>
                                <th>Frequency</th>
                                <th>Capacity</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% event.forEach(function(evt) { %>
                                <tr 
                                    class="event-row"
                                    data-template-id="<%= evt.event_template_id %>"
                                    data-event-name="<%= evt.event_name %>"
                                    data-event-type="<%= evt.event_type || 'N/A' %>"
                                    data-event-description="<%= evt.event_description || 'No description provided.' %>"
                                    data-event-recurrence="<%= evt.event_recurrence_pattern || 'N/A' %>"
                                    data-event-capacity="<%= evt.event_default_capacity || 'N/A' %>"
                                    style="cursor: pointer;"
                                >
                                    <td><%= evt.event_name %></td>
                                    <td><%= evt.event_type || 'N/A' %></td>
                                    <td><%= evt.event_recurrence_pattern || 'N/A' %></td>
                                    <td><%= evt.event_default_capacity || 'N/A' %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <p class="empty-state-message">No event templates found.</p>
                </div>
            <% } %>

            <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                <div class="manage-donations-pagination">
                    <%
                        var searchParam = '';
                        if (typeof searchQuery !== 'undefined' && searchQuery && searchQuery.trim() !== '') {
                            searchParam = '&search=' + encodeURIComponent(searchQuery);
                        }
                    %>
                    <% if (currentPage > 1) { %>
                        <a href="/manage-events?page=<%= currentPage - 1 %><%= searchParam %>" class="pagination-btn">Previous</a>
                    <% } else { %>
                        <span class="pagination-btn disabled">Previous</span>
                    <% } %>
                    <div class="pagination-pages">
                        <%
                            const maxVisible = 5;
                            let startPage = Math.max(1, currentPage - 2);
                            let endPage = Math.min(totalPages, currentPage + 2);
                            if (endPage - startPage + 1 < maxVisible) {
                                if (startPage === 1) {
                                    endPage = Math.min(totalPages, startPage + maxVisible - 1);
                                } else if (endPage === totalPages) {
                                    startPage = Math.max(1, endPage - maxVisible + 1);
                                }
                            }
                        %>
                        <% if (startPage > 1) { %>
                            <a href="/manage-events?page=1<%= searchParam %>" class="pagination-page <%= currentPage === 1 ? 'active' : '' %>">1</a>
                            <% if (startPage > 2) { %><span class="pagination-ellipsis">‚Ä¶</span><% } %>
                        <% } %>
                        <% for (let i = startPage; i <= endPage; i++) { %>
                            <a href="/manage-events?page=<%= i %><%= searchParam %>" class="pagination-page <%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                        <% } %>
                        <% if (endPage < totalPages) { %>
                            <% if (endPage < totalPages - 1) { %><span class="pagination-ellipsis">‚Ä¶</span><% } %>
                            <a href="/manage-events?page=<%= totalPages %><%= searchParam %>" class="pagination-page <%= currentPage === totalPages ? 'active' : '' %>"><%= totalPages %></a>
                        <% } %>
                    </div>
                    <% if (currentPage < totalPages) { %>
                        <a href="/manage-events?page=<%= currentPage + 1 %><%= searchParam %>" class="pagination-btn">Next</a>
                    <% } else { %>
                        <span class="pagination-btn disabled">Next</span>
                    <% } %>
                </div>
            <% } %>

            <!-- View Details Modal -->
            <div id="view-details-modal" class="modal hidden">
                <div class="modal-content">
                    <h2>Event Template Details</h2>
                    <div class="event-details-container">
                        <div class="detail-row">
                            <strong class="detail-label">Event Name:</strong>
                            <span id="detail-event-name"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">Event Type:</strong>
                            <span id="detail-event-type"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">Recurrence Pattern:</strong>
                            <span id="detail-event-recurrence"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">Default Capacity:</strong>
                            <span id="detail-event-capacity"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label detail-label-top">Description:</strong>
                            <span id="detail-event-description" class="detail-description"></span>
                        </div>
                    </div>
                    <div class="modal-actions">
                        <button type="button" id="btn-edit-template" class="btn-primary">Edit</button>
                        <button type="button" id="btn-delete-template" class="btn-delete">Delete</button>
                        <button type="button" id="close-details" class="btn-secondary">Close</button>
                    </div>
                </div>
            </div>

            <!-- Delete Confirmation Modal -->
            <div id="delete-confirm-modal" class="modal hidden">
                <div class="modal-content">
                    <h2>Confirm Deletion</h2>
                    <p>Are you sure you want to delete this event template? This will also delete all related event occurrences. This action cannot be undone.</p>
                    <div class="modal-actions">
                        <form id="delete-template-form" method="POST" style="display: inline-block;">
                            <button type="submit" class="btn-delete">Yes, Delete</button>
                        </form>
                        <button type="button" id="cancel-delete" class="btn-secondary">Cancel</button>
                    </div>
                </div>
            </div>

            <!-- Edit Event Template Modal -->
            <div id="edit-template-modal" class="modal hidden">
                <div class="modal-content">
                    <h2>Edit Event Template</h2>
                    <form id="edit-template-form" method="POST">
                        <div class="form-group">
                            <label for="edit_event_name">Event Name</label>
                            <input type="text" id="edit_event_name" name="event_name" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_event_type">Event Type</label>
                            <select id="edit_event_type" name="event_type" required>
                                <option value="Mariachi">Mariachi</option>
                                <option value="Ballet Folklorico">Ballet Folklorico</option>
                                <option value="STEAM">STEAM</option>
                                <option value="Ella Rises Summit">Ella Rises Summit</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="edit_event_description">Description</label>
                            <textarea id="edit_event_description" name="event_description" rows="4"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="edit_event_recurrence_pattern">Recurrence Pattern</label>
                            <select id="edit_event_recurrence_pattern" name="event_recurrence_pattern">
                                <option value="One-time">One-time</option>
                                <option value="Weekly">Weekly</option>
                                <option value="Bi-weekly">Bi-weekly</option>
                                <option value="Monthly">Monthly</option>
                                <option value="Quarterly">Quarterly</option>
                                <option value="Annually">Annually</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="edit_event_default_capacity">Default Capacity</label>
                            <input type="number" id="edit_event_default_capacity" name="event_default_capacity" min="1">
                        </div>
                        <div class="modal-actions">
                            <button type="submit" class="btn-primary">Save Changes</button>
                            <button type="button" id="cancel-edit-template" class="btn-secondary">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>Ella Rises</h3>
                <p>Empowering young women through culturally rooted educational programs.</p>
            </div>
            <div class="footer-section">
                <h4>Quick Links</h4>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/events">Event Information</a></li>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/about#contact">Contact</a></li>
                </ul>
            </div>
            <div class="footer-section">
