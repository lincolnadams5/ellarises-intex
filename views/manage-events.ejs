                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Ella Rises. All rights reserved.</p>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // User dropdown functionality
            const userDropdown = document.querySelector('.user-dropdown');
            const dropdownBtn = document.querySelector('.user-dropdown-btn');
            
            if (dropdownBtn) {
                dropdownBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    userDropdown.classList.toggle('active');
                });
            }
            
            document.addEventListener('click', function(e) {
                if (userDropdown && !userDropdown.contains(e.target)) {
                    userDropdown.classList.remove('active');
                }
            });

            // Current row being viewed
            let currentRow = null;

            // Modal elements
            const detailsModal = document.getElementById('view-details-modal');
            const editModal = document.getElementById('edit-template-modal');
            const deleteModal = document.getElementById('delete-confirm-modal');
            const closeDetailsBtn = document.getElementById('close-details');
            const editBtn = document.getElementById('btn-edit-template');
            const deleteBtn = document.getElementById('btn-delete-template');
            const editForm = document.getElementById('edit-template-form');
            const deleteForm = document.getElementById('delete-template-form');
            const cancelEditBtn = document.getElementById('cancel-edit-template');
            const cancelDeleteBtn = document.getElementById('cancel-delete');

            // Show details modal
            function showEventDetails(row) {
                currentRow = row;
                document.getElementById('detail-event-name').textContent = row.getAttribute('data-event-name');
                document.getElementById('detail-event-type').textContent = row.getAttribute('data-event-type');
                document.getElementById('detail-event-description').textContent = row.getAttribute('data-event-description');
                document.getElementById('detail-event-recurrence').textContent = row.getAttribute('data-event-recurrence');
                document.getElementById('detail-event-capacity').textContent = row.getAttribute('data-event-capacity');
                detailsModal.classList.remove('hidden');
            }

            // Make table rows clickable
            const eventRows = document.querySelectorAll('.event-row');
            eventRows.forEach(row => {
                row.addEventListener('click', function(e) {
                    if (e.target.closest('button, form') === null) {
                        showEventDetails(this);
                    }
                });
            });

            // Close details modal
            if (closeDetailsBtn) {
                closeDetailsBtn.addEventListener('click', () => detailsModal.classList.add('hidden'));
            }
            detailsModal.addEventListener('click', (e) => {
                if (e.target === detailsModal) detailsModal.classList.add('hidden');
            });

            // Edit button - open edit modal
            if (editBtn) {
                editBtn.addEventListener('click', function() {
                    if (!currentRow) return;
                    const templateId = currentRow.getAttribute('data-template-id');
                    editForm.action = '/manage-events/' + templateId + '/update';
                    
                    document.getElementById('edit_event_name').value = currentRow.getAttribute('data-event-name');
                    
                    const eventType = currentRow.getAttribute('data-event-type');
                    const typeSelect = document.getElementById('edit_event_type');
                    for (let i = 0; i < typeSelect.options.length; i++) {
                        if (typeSelect.options[i].value === eventType) {
                            typeSelect.selectedIndex = i;
                            break;
                        }
                    }
                    
                    const description = currentRow.getAttribute('data-event-description');
                    document.getElementById('edit_event_description').value = description !== 'No description provided.' ? description : '';
                    
                    const recurrence = currentRow.getAttribute('data-event-recurrence');
                    const recurrenceSelect = document.getElementById('edit_event_recurrence_pattern');
                    for (let i = 0; i < recurrenceSelect.options.length; i++) {
                        if (recurrenceSelect.options[i].value === recurrence) {
                            recurrenceSelect.selectedIndex = i;
                            break;
                        }
                    }
                    
                    const capacity = currentRow.getAttribute('data-event-capacity');
                    document.getElementById('edit_event_default_capacity').value = capacity !== 'N/A' ? capacity : '';
                    
                    detailsModal.classList.add('hidden');
                    editModal.classList.remove('hidden');
                });
            }

            // Delete button - open confirmation modal
            if (deleteBtn) {
                deleteBtn.addEventListener('click', function() {
                    if (!currentRow) return;
                    deleteForm.action = '/manage-events/' + currentRow.getAttribute('data-template-id') + '/delete';
                    detailsModal.classList.add('hidden');
                    deleteModal.classList.remove('hidden');
                });
            }

            // Cancel edit
            if (cancelEditBtn) {
                cancelEditBtn.addEventListener('click', () => editModal.classList.add('hidden'));
            }
            editModal.addEventListener('click', (e) => {
                if (e.target === editModal) editModal.classList.add('hidden');
            });

            // Cancel delete
            if (cancelDeleteBtn) {
                cancelDeleteBtn.addEventListener('click', () => deleteModal.classList.add('hidden'));
            }
            deleteModal.addEventListener('click', (e) => {
                if (e.target === deleteModal) deleteModal.classList.add('hidden');
            });
        });
    </script>
</body>
</html>
