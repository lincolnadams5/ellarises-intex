<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Events - Ella Rises</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <h1><a href="/" style="text-decoration: none; color: inherit;">Ella Rises</a></h1>
            </div>
            <ul class="nav-menu">
                <li><a href="/events">Events</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/donate">Donate</a></li>
            </ul>
            <% if (isLoggedIn && level === 'admin') { %>
                <div class="nav-auth">
                    <div class="user-dropdown">
                        <button class="user-dropdown-btn">
                            <%= first_name %> <%= last_name %> ▼
                        </button>
                        <div class="user-dropdown-content">
                            <a href="/manage-donations">Manage Donations</a>
                            <a href="/manage-milestones">Manage Milestones</a>
                            <a href="/manage-surveys">Survey Results</a>
                            <a href="/manage-events">Manage Events</a>
                            <a href="/manage-participants">Participants</a>
                            <a href="/account-info">Account Info</a>
                            <form action="/logout" method="POST" class="dropdown-logout-form">
                                <button type="submit" class="dropdown-logout-btn">Logout</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } else if (isLoggedIn) { %>
                <div class="nav-auth">
                    <div class="user-dropdown">
                        <button class="user-dropdown-btn">
                            <%= first_name %> <%= last_name %> ▼
                        </button>
                        <div class="user-dropdown-content">
                            <a href="/my-donations">My Donations</a>
                            <a href="/milestone-progress">Milestone Progress</a>
                            <a href="/surveys">Surveys</a>
                            <a href="/account-info">Account Info</a>
                            <form action="/logout" method="POST" class="dropdown-logout-form">
                                <button type="submit" class="dropdown-logout-btn">Logout</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="nav-auth">
                    <a href="/login" class="btn-signin">Sign In</a>
                    <a href="/register" class="btn-signup">Sign Up</a>
                </div>
            <% }; %>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="manage-donations-container">
        <div class="manage-donations-wrapper">
            <h1 class="manage-donations-title">Add An Event</h1>
            <form action="/manage-events/new-template" method="POST">
                <div class="form-group">
                    <!-- EVENT NAME -->
                    <label for="event_name">Event Name</label>
                    <input
                    type="text"
                    id="event_name"
                    name="event_name"
                    value="<%= typeof event_name !== 'undefined' ? event_name : '' %>"
                    placeholder=""
                    required
                    autofocus="autofocus"
                    >
                    <!-- EVENT TYPE -->
                    <label for="event_type">Event Type</label>
                    <select id="event_type" name="event_type" required>
                        <option value="" disabled selected>Select an event type</option>
                        <option value="Leadership">Leadership</option>
                        <option value="Arts">Arts</option>
                        <option value="STEM">STEM</option>
                        <option value="Annual Conference">Annual Conference</option>
                    </select>
                    <!-- EVENT DESCRIPTION -->
                    <label for="event_description">Event Description</label>
                    <textarea
                    id="event_description"
                    name="event_description"
                    placeholder=""
                    rows="4"
                    required
                    ></textarea>
                    <!-- EVENT RECURRENCE PATTERN -->
                    <label for="event_recurrence_pattern">Event Frequency</label>
                    <select id="event_recurrence_pattern" name="event_recurrence_pattern" required>
                        <option value="" disabled selected>Select a frequency option</option>
                        <option value="Weekly">Weekly</option>
                        <option value="Monthly">Monthly</option>
                        <option value="Annual">Annually</option>
                        <!-- <option value="Other">Other</option> -->
                    </select>
                    <!-- EVENT DEFAULT CAPACITY -->
                    <label for="event_default_capacity">Event Default Capacity</label>
                    <input
                    type="number"
                    name="event_default_capacity"
                    id="event_default_capacity"
                    required                    
                    >
                </div>
                <button class="btn-primary" type="submit">
                    Create Event
                </button>
            </form>
        </div>
    </div>


    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>Ella Rises</h3>
                <p>Empowering young women through culturally rooted educational programs.</p>
            </div>
            <div class="footer-section">
                <h4>Quick Links</h4>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/events">Event Information</a></li>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/donate">Donate</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Programs</h4>
                <ul>
                    <li><a href="#">Mariachi</a></li>
                    <li><a href="#">Ballet Folklorico</a></li>
                    <li><a href="#">STEAM Workshops</a></li>
                    <li><a href="#">Ella Rises Summit</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Get Involved</h4>
                <ul>
                    <li><a href="#">Volunteer</a></li>
                    <li><a href="#">Donate</a></li>
                    <li><a href="#">Sponsor</a></li>
                    <li><a href="#">Newsletter</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Ella Rises. All rights reserved.</p>
        </div>
    </footer>

    <script>
        // User dropdown functionality
        document.addEventListener('DOMContentLoaded', function() {
            const userDropdown = document.querySelector('.user-dropdown');
            const dropdownBtn = document.querySelector('.user-dropdown-btn');
            
            if (dropdownBtn) {
                dropdownBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    userDropdown.classList.toggle('active');
                });
            }
            
            // Close dropdown when clicking outside
            document.addEventListener('click', function(e) {
                if (userDropdown && !userDropdown.contains(e.target)) {
                    userDropdown.classList.remove('active');
                }
            });
        });
    </script>
</body>
</html>
