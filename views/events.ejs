    <!-- Events Hero Section -->
    <section class="events-hero">
        <div class="events-hero-content">
            <h1><%= filter === 'past' ? 'Past Events' : 'Upcoming Events' %></h1>
            <% if (filter === 'past') { %>
                <p class="events-lead">Browse our past events and see the impact we've made in our community.</p>
            <% } else { %>
                <p class="events-lead">Join us for inspiring programs that celebrate culture, education, and community. Register today!</p>
            <% } %>
        </div>
    </section>

    <!-- Success/Error Messages -->
    <% if (typeof success_message !== 'undefined' && success_message) { %>
        <div class="alert alert-success" style="max-width: 1200px; margin: 1rem auto; padding: 1rem; background: #d4edda; color: #155724; border-radius: 8px; text-align: center;">
            <%= success_message %>
        </div>
    <% } %>
    <% if (typeof error_message !== 'undefined' && error_message) { %>
        <div class="alert alert-error" style="max-width: 1200px; margin: 1rem auto; padding: 1rem; background: #f8d7da; color: #721c24; border-radius: 8px; text-align: center;">
            <%= error_message %>
        </div>
    <% } %>

    <!-- Events List Section -->
    <section class="events-list">
        <div class="events-container">

            <%
                // Helper function to format date
                function formatEventDate(dateObj) {
                    const months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
                    const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
                    return days[dateObj.getDay()] + ', ' + months[dateObj.getMonth()] + ' ' + dateObj.getDate() + ', ' + dateObj.getFullYear();
                }

                // Helper function to format time
                function formatTime(dateObj) {
                    let hours = dateObj.getHours();
                    const minutes = dateObj.getMinutes().toString().padStart(2, '0');
                    const ampm = hours >= 12 ? 'PM' : 'AM';
                    hours = hours % 12;
                    hours = hours ? hours : 12;
                    return hours + ':' + minutes + ' ' + ampm;
                }

                // Helper function to calculate duration
                function calculateDuration(start, end) {
                    const diffMs = end - start;
                    const diffHours = Math.floor(diffMs / (1000 * 60 * 60));
                    const diffMins = Math.floor((diffMs % (1000 * 60 * 60)) / (1000 * 60));
                    if (diffHours > 0 && diffMins > 0) {
                        return diffHours + ' hr ' + diffMins + ' min';
                    } else if (diffHours > 0) {
                        return diffHours + ' hour' + (diffHours > 1 ? 's' : '');
                    } else {
                        return diffMins + ' minutes';
                    }
                }

                // Helper function to get month abbreviation
                function getMonthAbbr(dateObj) {
                    const months = ['JAN', 'FEB', 'MAR', 'APR', 'MAY', 'JUN', 'JUL', 'AUG', 'SEP', 'OCT', 'NOV', 'DEC'];
                    return months[dateObj.getMonth()];
                }

                // Helper function to format registration deadline
                function formatDeadline(dateObj) {
                    const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
                    return months[dateObj.getMonth()] + ' ' + dateObj.getDate() + ', ' + dateObj.getFullYear() + ' at ' + formatTime(dateObj);
                }

                const currentDate = new Date();
            %>

            <!-- Dynamic Event Cards from Database -->
            <% if (events && events.length > 0) { %>
                <% events.forEach(function(event) { %>
                    <%
                        const startDate = new Date(event.event_date_time_start);
                        const endDate = new Date(event.event_date_time_end);
                        const deadlineDate = event.event_registration_deadline ? new Date(event.event_registration_deadline) : null;
                        const isPast = startDate < currentDate;
                        
                        let imagePath;
                        if (event.event_type === 'Arts') {
                            imagePath = '/public/images/arts_event.jpg';
                        } else if (event.event_type === 'Leadership') {
                            imagePath = '/public/images/leadership_event.jpeg';
                        } else if (event.event_type === 'STEM') {
                            imagePath = '/public/images/stem_event.jpeg';
                        } else if (event.event_type === 'Annual Conference') {
                            imagePath = '/public/images/annual_conference_event.jpg';
                        } else {
                            imagePath = '/public/images/stem_event.jpeg';
                        }
                    %>
                    <div class="event-card">
                        <div class="event-image">
                            <img src="<%= imagePath %>" alt="<%= event.event_type %>">
                            <div class="event-date-badge">
                                <div class="badge-month"><%= getMonthAbbr(startDate) %></div>
                                <div class="badge-day"><%= startDate.getDate() %></div>
                            </div>
                        </div>
                        <div class="event-content">
                            <div class="event-category"><%= event.event_type || 'Event' %></div>
                            <h3 class="event-title"><%= event.event_name %></h3>
                            <p class="event-description"><%= event.event_description || 'Join us for this exciting event!' %></p>
                            
                            <div class="event-details">
                                <div class="event-detail-item">
                                    <div class="detail-info">
                                        <strong>Date & Time</strong>
                                        <p><%= formatEventDate(startDate) %> | <%= formatTime(startDate) %> (<%= calculateDuration(startDate, endDate) %>)</p>
                                    </div>
                                </div>
                                <% if (event.event_location) { %>
                                <div class="event-detail-item">
                                    <div class="detail-info">
                                        <strong>Location</strong>
                                        <p><%= event.event_location %></p>
                                    </div>
                                </div>
                                <% } %>
                                <% if (deadlineDate && !isPast) { %>
                                <div class="event-detail-item">
                                    <div class="detail-info">
                                        <strong>Registration Deadline</strong>
                                        <p><%= formatDeadline(deadlineDate) %></p>
                                    </div>
                                </div>
                                <% } %>
                            </div>

                            <% if (!isPast) { %>
                            <div class="event-footer">
                                <%
                                    const isAtCapacity = event.event_capacity && event.registration_count >= event.event_capacity;
                                    const isDeadlinePassed = deadlineDate && deadlineDate < currentDate;
                                    const isAlreadyRegistered = event.is_user_registered;
                                    const canRegister = !isAtCapacity && !isDeadlinePassed && !isAlreadyRegistered;
                                    
                                    let buttonText = 'Register';
                                    let buttonTitle = '';
                                    if (isAlreadyRegistered) {
                                        buttonText = 'Registered';
                                        buttonTitle = 'You are already registered for this event';
                                    } else if (isAtCapacity) {
                                        buttonText = 'Full';
                                        buttonTitle = 'This event is at full capacity';
                                    } else if (isDeadlinePassed) {
                                        buttonText = 'Closed';
                                        buttonTitle = 'Registration deadline has passed';
                                    }
                                %>
                                <% if (!isLoggedIn) { %>
                                    <a href="/login?redirect=<%= encodeURIComponent('/events') %>" class="btn-reserve">Sign In to Register</a>
                                <% } else if (canRegister) { %>
                                    <form action="/events/<%= event.event_occurrence_id %>/register" method="POST" style="display: inline;">
                                        <button type="submit" class="btn-reserve">Register</button>
                                    </form>
                                <% } else { %>
                                    <button class="btn-reserve btn-disabled" disabled title="<%= buttonTitle %>"><%= buttonText %></button>
                                <% } %>
                            </div>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            <% } %>

            <!-- Placeholder Cards (only show on upcoming events page) -->
            <% if (filter !== 'past') { %>
                <!-- Placeholder Event Card 1 -->
                <div class="event-card">
                    <div class="event-image">
                        <img src="/public/images/skull_robot.JPG" alt="STEAM Workshop">
                        <div class="event-date-badge">
                            <div class="badge-month">JAN</div>
                            <div class="badge-day">15</div>
                        </div>
                    </div>
                    <div class="event-content">
                        <div class="event-category">STEAM Workshop</div>
                        <h3 class="event-title">Coding & Robotics for Beginners *(Placeholder)*</h3>
                        <p class="event-description">Join us for an exciting hands-on workshop where young women will learn the fundamentals of coding and robotics. Participants will work in teams to program robots, solve challenges, and discover the endless possibilities in technology careers.</p>
                        
                        <div class="event-details">
                            <div class="event-detail-item">
                                <div class="detail-info">
                                    <strong>Date & Time</strong>
                                    <p>Saturday, January 15, 2025 | 10:00 AM (4 hours)</p>
                                </div>
                            </div>
                            <div class="event-detail-item">
                                <div class="detail-info">
                                    <strong>Location</strong>
                                    <p>Ella Rises Community Center, Salt Lake City</p>
                                </div>
                            </div>
                            <div class="event-detail-item">
                                <div class="detail-info">
                                    <strong>Registration Deadline</strong>
                                    <p>Jan 10, 2025 at 11:59 PM</p>
                                </div>
                            </div>
                        </div>

                        <div class="event-footer">
                            <button class="btn-reserve">Register</button>
                        </div>
                    </div>
                </div>

                <!-- Placeholder Event Card 2 -->
                <div class="event-card">
                    <div class="event-image">
                        <img src="/public/images/summer_summit.jpg" alt="Ella Rises Summit">
                        <div class="event-date-badge">
                            <div class="badge-month">FEB</div>
                            <div class="badge-day">22</div>
                        </div>
                    </div>
                    <div class="event-content">
                        <div class="event-category">Annual Summit</div>
                        <h3 class="event-title">Ella Rises Summit 2025: Path to Higher Education *(Placeholder)*</h3>
                        <p class="event-description">Our flagship annual event brings together young women, families, and community leaders for a day of inspiration and empowerment. Features keynote speakers, college preparation workshops, financial aid sessions, mariachi performances, and networking opportunities with universities.</p>
                        
                        <div class="event-details">
                            <div class="event-detail-item">
                                <div class="detail-info">
                                    <strong>Date & Time</strong>
                                    <p>Saturday, February 22, 2025 | 9:00 AM (7 hours)</p>
                                </div>
                            </div>
                            <div class="event-detail-item">
                                <div class="detail-info">
                                    <strong>Location</strong>
                                    <p>BYU Campus, Provo, Utah</p>
                                </div>
                            </div>
                            <div class="event-detail-item">
                                <div class="detail-info">
                                    <strong>Registration Deadline</strong>
                                    <p>Feb 15, 2025 at 11:59 PM</p>
                                </div>
                            </div>
                        </div>

                        <div class="event-footer">
                            <button class="btn-reserve">Register</button>
                        </div>
                    </div>
                </div>
            <% } %>

            <!-- Empty State -->
            <% if ((!events || events.length === 0) && filter === 'past') { %>
                <div class="empty-state" style="text-align: center; padding: 3rem;">
                    <p class="empty-state-message">No past events found.</p>
                </div>
            <% } %>

        </div>

        <!-- Pagination -->
        <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
            <div class="manage-donations-pagination" style="margin-top: 2rem;">
                <% if (currentPage > 1) { %>
                    <a href="/events?filter=<%= filter %>&page=<%= currentPage - 1 %>" class="pagination-btn">Previous</a>
                <% } else { %>
                    <span class="pagination-btn disabled">Previous</span>
                <% } %>
                <div class="pagination-pages">
                    <%
                        const maxVisible = 5;
                        let startPage = Math.max(1, currentPage - 2);
                        let endPage = Math.min(totalPages, currentPage + 2);
                        if (endPage - startPage + 1 < maxVisible) {
                            if (startPage === 1) {
                                endPage = Math.min(totalPages, startPage + maxVisible - 1);
                            } else if (endPage === totalPages) {
                                startPage = Math.max(1, endPage - maxVisible + 1);
                            }
                        }
                    %>
                    <% if (startPage > 1) { %>
                        <a href="/events?filter=<%= filter %>&page=1" class="pagination-page <%= currentPage === 1 ? 'active' : '' %>">1</a>
                        <% if (startPage > 2) { %><span class="pagination-ellipsis">â€¦</span><% } %>
                    <% } %>
                    <% for (let i = startPage; i <= endPage; i++) { %>
                        <a href="/events?filter=<%= filter %>&page=<%= i %>" class="pagination-page <%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                    <% } %>
                    <% if (endPage < totalPages) { %>
                        <% if (endPage < totalPages - 1) { %><span class="pagination-ellipsis">â€¦</span><% } %>
                        <a href="/events?filter=<%= filter %>&page=<%= totalPages %>" class="pagination-page <%= currentPage === totalPages ? 'active' : '' %>"><%= totalPages %></a>
                    <% } %>
                </div>
                <% if (currentPage < totalPages) { %>
                    <a href="/events?filter=<%= filter %>&page=<%= currentPage + 1 %>" class="pagination-btn">Next</a>
                <% } else { %>
                    <span class="pagination-btn disabled">Next</span>
                <% } %>
            </div>
        <% } %>
    </section>

