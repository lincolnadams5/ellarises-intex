<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <h1><a href="/" style="text-decoration: none; color: inherit;">Ella Rises</a></h1>
            </div>
            <ul class="nav-menu">
                <li><a href="/events">Events</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/donate">Donate</a></li>
            </ul>
            <div class="nav-auth">
                <a href="/login" class="btn-signin">Sign In</a>
                <a href="/register" class="btn-signup">Sign Up</a>
            </div>
        </div>
    </nav>

    <!-- Events Hero Section -->
    <section class="events-hero">
        <div class="events-hero-content">
            <h1>Upcoming Events</h1>
            <p class="events-lead">Join us for inspiring programs that celebrate culture, education, and community. Reserve your spot today!</p>
        </div>
    </section>

    <!-- Events List Section -->
    <section class="events-list">
        <div class="events-container">

            <!-- Example Event Card 1 -->
            <div class="event-card">
                <div class="event-image">
                    <img src="https://via.placeholder.com/400x300/99b7c6/ffffff?text=STEAM+Workshop" alt="STEAM Workshop">
                    <div class="event-date-badge">
                        <div class="badge-month">JAN</div>
                        <div class="badge-day">15</div>
                    </div>
                </div>
                <div class="event-content">
                    <div class="event-category">STEAM Workshop</div>
                    <h3 class="event-title">Coding & Robotics for Beginners</h3>
                    <p class="event-description">Join us for an exciting hands-on workshop where young women will learn the fundamentals of coding and robotics. Participants will work in teams to program robots, solve challenges, and discover the endless possibilities in technology careers.</p>
                    
                    <div class="event-details">
                        <div class="event-detail-item">
                            <span class="detail-icon">üìÖ</span>
                            <div class="detail-info">
                                <strong>Date & Time</strong>
                                <p>Saturday, January 15, 2025 | 10:00 AM - 2:00 PM</p>
                            </div>
                        </div>
                        <div class="event-detail-item">
                            <span class="detail-icon">üìç</span>
                            <div class="detail-info">
                                <strong>Location</strong>
                                <p>Ella Rises Community Center, Salt Lake City</p>
                            </div>
                        </div>
                        <div class="event-detail-item">
                            <span class="detail-icon">üë•</span>
                            <div class="detail-info">
                                <strong>Capacity</strong>
                                <p>25 spots available</p>
                            </div>
                        </div>
                    </div>

                    <div class="event-footer">
                        <button class="btn-reserve">Reserve Spot</button>
                    </div>
                </div>
            </div>

            <!-- Example Event Card 2 -->
            <div class="event-card">
                <div class="event-image">
                    <img src="https://via.placeholder.com/400x300/fad7d1/ffffff?text=Ella+Rises+Summit" alt="Ella Rises Summit">
                    <div class="event-date-badge">
                        <div class="badge-month">FEB</div>
                        <div class="badge-day">22</div>
                    </div>
                </div>
                <div class="event-content">
                    <div class="event-category">Annual Summit</div>
                    <h3 class="event-title">Ella Rises Summit 2025: Path to Higher Education</h3>
                    <p class="event-description">Our flagship annual event brings together young women, families, and community leaders for a day of inspiration and empowerment. Features keynote speakers, college preparation workshops, financial aid sessions, mariachi performances, and networking opportunities with universities.</p>
                    
                    <div class="event-details">
                        <div class="event-detail-item">
                            <span class="detail-icon">üìÖ</span>
                            <div class="detail-info">
                                <strong>Date & Time</strong>
                                <p>Saturday, February 22, 2025 | 9:00 AM - 4:00 PM</p>
                            </div>
                        </div>
                        <div class="event-detail-item">
                            <span class="detail-icon">üìç</span>
                            <div class="detail-info">
                                <strong>Location</strong>
                                <p>BYU Campus, Provo, Utah</p>
                            </div>
                        </div>
                        <div class="event-detail-item">
                            <span class="detail-icon">üë•</span>
                            <div class="detail-info">
                                <strong>Capacity</strong>
                                <p>200 spots available | All ages welcome</p>
                            </div>
                        </div>
                    </div>

                    <div class="event-footer">
                        <button class="btn-reserve">Reserve Spot</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="events-cta">
        <div class="events-cta-content">
            <h2>Want to Host an Event?</h2>
            <p>Organizations and community partners interested in collaborating with Ella Rises can reach out to discuss event opportunities.</p>
            <a href="/about#contact" class="btn-primary">Contact Us</a>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>Ella Rises</h3>
                <p>Empowering young women through culturally rooted educational programs.</p>
            </div>
            <div class="footer-section">
                <h4>Quick Links</h4>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/events">Event Information</a></li>
                    <li><a href="/about">About Us</a></li>
