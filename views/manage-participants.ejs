<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Participants - Ella Rises</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=DM+Serif+Display&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <ul class="nav-menu">
                <li><a href="/events">Events</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/donate">Donate</a></li>
            </ul>
            <div class="nav-logo">
                <h1><a href="/" style="text-decoration: none; color: inherit;">ELLA RISES</a></h1>
            </div>
            <% if (isLoggedIn && level === 'admin') { %>
                <div class="nav-auth">
                    <div class="user-dropdown">
                        <button class="user-dropdown-btn">
                            <%= first_name %> <%= last_name %> ▼
                        </button>
                        <div class="user-dropdown-content">
                            <a href="/manage-donations">Manage Donations</a>
                            <a href="/manage-milestones">Manage Milestones</a>
                            <a href="/manage-surveys">Survey Results</a>
                            <a href="/manage-events">Manage Events</a>
                            <a href="/manage-participants">Participants</a>
                            <a href="/account-info">Account Info</a>
                            <form action="/logout" method="POST" class="dropdown-logout-form">
                                <button type="submit" class="dropdown-logout-btn">Logout</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } else if (isLoggedIn) { %>
                <div class="nav-auth">
                    <div class="user-dropdown">
                        <button class="user-dropdown-btn">
                            <%= first_name %> <%= last_name %> ▼
                        </button>
                        <div class="user-dropdown-content">
                            <a href="/my-donations">My Donations</a>
                            <a href="/milestone-progress">Milestone Progress</a>
                            <a href="/surveys">Surveys</a>
                            <a href="/account-info">Account Info</a>
                            <form action="/logout" method="POST" class="dropdown-logout-form">
                                <button type="submit" class="dropdown-logout-btn">Logout</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="nav-auth">
                    <a href="/login" class="btn-signin">Sign In</a>
                    <a href="/register" class="btn-signup">Sign Up</a>
                </div>
            <% }; %>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="manage-donations-container">
        <div class="manage-donations-wrapper">
            <!-- Page Header -->
            <div class="manage-donations-header">
                <h1 class="manage-donations-title">Manage Participants</h1>
                <p class="manage-donations-subtitle">View all registered participants</p>
            </div>

            <a href="/manage-participants/new" class="btn-primary">
                + Add Participant
            </a>

            <!-- Error Message Display -->
            <% if (typeof error_message !== 'undefined' && error_message && error_message.length > 0) { %>
                <div class="error-message">
                    <%= error_message %>
                </div>
            <% } %>

            <!-- Participants Table -->
            <% if (user && user.length > 0) { %>
                <div class="donations-table-container">
                    <table class="donations-table">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% user.forEach(function(user) { %>
                                <tr 
                                    class="participant-row"
                                    data-user-id="<%= user.user_id %>"
                                    data-first-name="<%= user.user_first_name %>"
                                    data-last-name="<%= user.user_last_name %>"
                                    data-email="<%= user.user_email %>"
                                    data-role="<%= user.user_role || 'N/A' %>"
                                    style="cursor: pointer;"
                                >
                                    <td><%= user.user_first_name %></td>
                                    <td><%= user.user_last_name %></td>
                                    <td><%= user.user_email %></td>
                                    <td>
                                        <% 
                                            // Format role: capitalize first letter
                                            const role = user.user_role || '';
                                            const formattedRole = role.charAt(0).toUpperCase() + role.slice(1).toLowerCase();
                                        %>
                                        <%= formattedRole %>
                                    </td>
                                    <td>
                                        <form 
                                            action="/manage-participants/<%= user.user_id %>/delete" 
                                            method="POST" 
                                            style="display: inline-block; margin-left: 10px;"
                                            onsubmit="return confirm('Are you sure you want to delete this user?');"
                                            onclick="event.stopPropagation();"
                                        >
                                            <button type="submit" class="btn-delete" style="background-color: #dc3545; color: white; border: none; padding: 5px 10px; border-radius: 4px; cursor: pointer;">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <p class="empty-state-message">No participants found.</p>
                </div>
            <% } %>
            <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                <div class="manage-donations-pagination">
                    <% if (currentPage > 1) { %>
                        <a href="/manage-participants?page=<%= currentPage - 1 %>" class="pagination-btn">Previous</a>
                    <% } else { %>
                        <span class="pagination-btn disabled">Previous</span>
                    <% } %>
        
                    <div class="pagination-pages">
                        <%
                            const maxVisible = 5; // number of page buttons in the middle window
                            let startPage = Math.max(1, currentPage - 2);
                            let endPage = Math.min(totalPages, currentPage + 2);
        
                            if (endPage - startPage + 1 < maxVisible) {
                                if (startPage === 1) {
                                    endPage = Math.min(totalPages, startPage + maxVisible - 1);
                                } else if (endPage === totalPages) {
                                    startPage = Math.max(1, endPage - maxVisible + 1);
                                }
                            }
                        %>
        
                        <% if (startPage > 1) { %>
                            <!-- First page -->
                            <a href="/manage-participants?page=1"
                               class="pagination-page <%= currentPage === 1 ? 'active' : '' %>">
                                1
                            </a>
        
                            <% if (startPage > 2) { %>
                                <span class="pagination-ellipsis">…</span>
                            <% } %>
                        <% } %>
        
                        <!-- Window of pages around current -->
                        <% for (let i = startPage; i <= endPage; i++) { %>
                            <a href="/manage-participants?page=<%= i %>"
                               class="pagination-page <%= i === currentPage ? 'active' : '' %>">
                                <%= i %>
                            </a>
                        <% } %>
        
                        <% if (endPage < totalPages) { %>
                            <% if (endPage < totalPages - 1) { %>
                                <span class="pagination-ellipsis">…</span>
                            <% } %>
        
                            <!-- Last page -->
                            <a href="/manage-participants?page=<%= totalPages %>"
                               class="pagination-page <%= currentPage === totalPages ? 'active' : '' %>">
                                <%= totalPages %>
                            </a>
                        <% } %>
                    </div>
        
                    <% if (currentPage < totalPages) { %>
                        <a href="/manage-participants?page=<%= currentPage + 1 %>" class="pagination-btn">Next</a>
                    <% } else { %>
                        <span class="pagination-btn disabled">Next</span>
                    <% } %>
                </div>
            <% } %>

            <!-- View Details Modal -->
            <div id="view-details-modal" class="modal hidden">
                <div class="modal-content">
                    <h2>Participant Details</h2>
                    <div class="participant-details-container" style="padding: 20px 0;">
                        <div class="detail-row" style="margin-bottom: 15px;">
                            <strong style="display: inline-block; width: 180px;">First Name:</strong>
                            <span id="detail-first-name"></span>
                        </div>
                        <div class="detail-row" style="margin-bottom: 15px;">
                            <strong style="display: inline-block; width: 180px;">Last Name:</strong>
                            <span id="detail-last-name"></span>
                        </div>
                        <div class="detail-row" style="margin-bottom: 15px;">
                            <strong style="display: inline-block; width: 180px;">Email:</strong>
                            <span id="detail-email"></span>
                        </div>
                        <div class="detail-row" style="margin-bottom: 15px;">
                            <strong style="display: inline-block; width: 180px;">Role:</strong>
                            <span id="detail-role"></span>
                        </div>
                    </div>
                    <div class="modal-actions">
                        <button type="button" id="close-details" class="btn-secondary">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>Ella Rises</h3>
                <p>Empowering young women through culturally rooted educational programs.</p>
            </div>
            <div class="footer-section">
                <h4>Quick Links</h4>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/events">Event Information</a></li>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/donate">Donate</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Programs</h4>
                <ul>
                    <li><a href="#">Mariachi</a></li>
                    <li><a href="#">Ballet Folklorico</a></li>
                    <li><a href="#">STEAM Workshops</a></li>
                    <li><a href="#">Ella Rises Summit</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Get Involved</h4>
                <ul>
                    <li><a href="#">Volunteer</a></li>
                    <li><a href="#">Donate</a></li>
                    <li><a href="#">Sponsor</a></li>
                    <li><a href="#">Newsletter</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Ella Rises. All rights reserved.</p>
        </div>
    </footer>

    <script>
        // User dropdown functionality
        document.addEventListener('DOMContentLoaded', function() {
            const userDropdown = document.querySelector('.user-dropdown');
            const dropdownBtn = document.querySelector('.user-dropdown-btn');
            
            if (dropdownBtn) {
                dropdownBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    userDropdown.classList.toggle('active');
                });
            }
            
            // Close dropdown when clicking outside
            document.addEventListener('click', function(e) {
                if (userDropdown && !userDropdown.contains(e.target)) {
                    userDropdown.classList.remove('active');
                }
            });

            // Navbar show/hide on scroll - only visible at top
            const navbar = document.querySelector('.navbar');
            
            window.addEventListener('scroll', function() {
                const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
                
                if (scrollTop < 64) {
                    navbar.classList.remove('hidden');
                } else {
                    navbar.classList.add('hidden');
                }
            });

            // View Details modal logic
            const detailsModal = document.getElementById('view-details-modal');
            const closeDetailsBtn = document.getElementById('close-details');

            // Function to populate and show the details modal
            function showParticipantDetails(row) {
                // Get all data attributes from the row
                const firstName = row.getAttribute('data-first-name');
                const lastName = row.getAttribute('data-last-name');
                const email = row.getAttribute('data-email');
                const role = row.getAttribute('data-role');

                // Format role: capitalize first letter
                const formattedRole = role.charAt(0).toUpperCase() + role.slice(1).toLowerCase();

                // Populate modal with data
                document.getElementById('detail-first-name').textContent = firstName;
                document.getElementById('detail-last-name').textContent = lastName;
                document.getElementById('detail-email').textContent = email;
                document.getElementById('detail-role').textContent = formattedRole;

                // Show modal
                detailsModal.classList.remove('hidden');
            }

            // Make table rows clickable
            const participantRows = document.querySelectorAll('.participant-row');
            if (detailsModal && participantRows.length > 0) {
                participantRows.forEach(row => {
                    row.addEventListener('click', function(e) {
                        // Only trigger if clicking directly on the row, not on buttons/forms
                        if (e.target.closest('button, form') === null) {
                            showParticipantDetails(this);
                        }
                    });
                });
            }

            if (detailsModal) {
                if (closeDetailsBtn) {
                    closeDetailsBtn.addEventListener('click', function() {
                        detailsModal.classList.add('hidden');
                    });
                }

                // Close modal when clicking outside content
                detailsModal.addEventListener('click', function(e) {
                    if (e.target === detailsModal) {
                        detailsModal.classList.add('hidden');
                    }
                });
            }
        });
    </script>
</body>
</html>
