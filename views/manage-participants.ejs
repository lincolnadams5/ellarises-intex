    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // User dropdown functionality
            const userDropdown = document.querySelector('.user-dropdown');
            const dropdownBtn = document.querySelector('.user-dropdown-btn');
            
            if (dropdownBtn) {
                dropdownBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    userDropdown.classList.toggle('active');
                });
            }
            
            document.addEventListener('click', function(e) {
                if (userDropdown && !userDropdown.contains(e.target)) {
                    userDropdown.classList.remove('active');
                }
            });

            // Current row being viewed
            let currentRow = null;

            // Modal elements
            const detailsModal = document.getElementById('view-details-modal');
            const editModal = document.getElementById('edit-participant-modal');
            const deleteModal = document.getElementById('delete-confirm-modal');
            const milestonesModal = document.getElementById('manage-milestones-modal');
            const closeDetailsBtn = document.getElementById('close-details');
            const editBtn = document.getElementById('btn-edit-participant');
            const deleteBtn = document.getElementById('btn-delete-participant');
            const manageMilestonesBtn = document.getElementById('btn-manage-milestones');
            const editForm = document.getElementById('edit-participant-form');
            const deleteForm = document.getElementById('delete-participant-form');
            const addMilestoneForm = document.getElementById('add-milestone-form');
            const cancelEditBtn = document.getElementById('cancel-edit-participant');
            const cancelDeleteBtn = document.getElementById('cancel-delete');
            const cancelManageMilestonesBtn = document.getElementById('cancel-manage-milestones');
            
            // Milestone data
            let currentUserId = null;
            let availableMilestones = [];
            let userMilestones = [];

            // Helper function to format date for display
            function formatDateForDisplay(dateString) {
                if (!dateString || dateString === '') return 'N/A';
                try {
                    const date = new Date(dateString);
                    if (isNaN(date.getTime())) return dateString;
                    const month = String(date.getMonth() + 1).padStart(2, '0');
                    const day = String(date.getDate()).padStart(2, '0');
                    const year = date.getFullYear();
                    return `${month}/${day}/${year}`;
                } catch (e) {
                    return dateString || 'N/A';
                }
            }

            // Load milestones for a user
            function loadUserMilestones(userId) {
                currentUserId = userId;
                fetch(`/manage-participants/${userId}/milestones`)
                    .then(response => response.json())
                    .then(data => {
                        userMilestones = data.userMilestones || [];
                        availableMilestones = data.availableMilestones || [];
                        displayMilestonesInDetails(userMilestones);
                        populateMilestoneSelect();
                        displayCurrentMilestones();
                    })
                    .catch(err => {
                        console.error('Error loading milestones:', err);
                        document.getElementById('detail-milestones').innerHTML = '<span style="color: #dc3545;">Error loading milestones</span>';
                    });
            }

            // Display milestones in the details modal
            function displayMilestonesInDetails(milestones) {
                const container = document.getElementById('detail-milestones');
                if (!milestones || milestones.length === 0) {
                    container.innerHTML = '<span style="color: #6c757d; font-style: italic;">No milestones yet</span>';
                    return;
                }
                
                const list = milestones.map(m => {
                    const date = formatDateForDisplay(m.milestone_date);
                    return `<div style="padding: 0.5rem; margin-bottom: 0.5rem; background-color: #f8f9fa; border-radius: 4px;">
                        <strong>${m.milestone_title}</strong> - ${date}
                    </div>`;
                }).join('');
                container.innerHTML = list;
            }

            // Populate the milestone select dropdown (excluding already assigned milestones)
            function populateMilestoneSelect() {
                const select = document.getElementById('milestone-select');
                const currentMilestoneIds = userMilestones.map(m => m.milestone_id);
                const available = availableMilestones.filter(m => !currentMilestoneIds.includes(m.milestone_id));
                
                // Clear existing options except the first one
                select.innerHTML = '<option value="">-- Select a milestone --</option>';
                
                available.forEach(milestone => {
                    const option = document.createElement('option');
                    option.value = milestone.milestone_id;
                    option.textContent = milestone.milestone_title;
                    select.appendChild(option);
                });
            }

            // Display current milestones in the manage modal
            function displayCurrentMilestones() {
                const container = document.getElementById('current-milestones-list');
                if (!userMilestones || userMilestones.length === 0) {
                    container.innerHTML = '<span style="color: #6c757d; font-style: italic;">No milestones assigned</span>';
                    return;
                }
                
                const list = userMilestones.map(m => {
                    const date = formatDateForDisplay(m.milestone_date);
                    return `<div style="display: flex; justify-content: space-between; align-items: center; padding: 0.75rem; margin-bottom: 0.5rem; background-color: #f8f9fa; border-radius: 4px;">
                        <div>
                            <strong>${m.milestone_title}</strong>
                            <span style="color: #6c757d; margin-left: 0.5rem;">- ${date}</span>
                        </div>
                        <button type="button" class="btn-delete" style="padding: 0.4rem 0.8rem; font-size: 0.9rem;" data-milestone-id="${m.milestone_id}">Remove</button>
                    </div>`;
                }).join('');
                container.innerHTML = list;
                
                // Add event listeners to remove buttons
                container.querySelectorAll('button[data-milestone-id]').forEach(btn => {
                    btn.addEventListener('click', function() {
                        const milestoneId = parseInt(this.getAttribute('data-milestone-id'), 10);
                        removeMilestone(milestoneId);
                    });
                });
            }

            // Remove a milestone from user
            function removeMilestone(milestoneId) {
                if (!confirm('Are you sure you want to remove this milestone?')) {
                    return;
                }
                
                fetch(`/manage-participants/${currentUserId}/milestones/remove`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ milestone_id: milestoneId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.error) {
                        showMilestonesError(data.error);
                    } else {
                        showMilestonesSuccess('Milestone removed successfully');
                        loadUserMilestones(currentUserId);
                    }
                })
                .catch(err => {
                    console.error('Error removing milestone:', err);
                    showMilestonesError('Error removing milestone');
                });
            }

            // Show details modal
            function showParticipantDetails(row) {
                currentRow = row;
                const userId = parseInt(row.getAttribute('data-user-id'), 10);
                const role = row.getAttribute('data-role');
                const formattedRole = role && role !== 'N/A' 
                    ? role.charAt(0).toUpperCase() + role.slice(1).toLowerCase()
                    : 'N/A';

                document.getElementById('detail-first-name').textContent = row.getAttribute('data-first-name') || 'N/A';
                document.getElementById('detail-last-name').textContent = row.getAttribute('data-last-name') || 'N/A';
                document.getElementById('detail-email').textContent = row.getAttribute('data-email') || 'N/A';
                document.getElementById('detail-role').textContent = formattedRole;
                document.getElementById('detail-dob').textContent = formatDateForDisplay(row.getAttribute('data-dob'));
                document.getElementById('detail-phone').textContent = row.getAttribute('data-phone') || 'N/A';
                document.getElementById('detail-city').textContent = row.getAttribute('data-city') || 'N/A';
                document.getElementById('detail-state').textContent = row.getAttribute('data-state') || 'N/A';
                document.getElementById('detail-zip').textContent = row.getAttribute('data-zip') || 'N/A';
                document.getElementById('detail-school').textContent = row.getAttribute('data-school') || 'N/A';
                document.getElementById('detail-employer').textContent = row.getAttribute('data-employer') || 'N/A';
                document.getElementById('detail-field-of-interest').textContent = row.getAttribute('data-field-of-interest') || 'N/A';
                
                // Load milestones for this user
                loadUserMilestones(userId);
                
                detailsModal.classList.remove('hidden');
            }

            // Show/hide error message
            function showMilestonesError(message) {
                const errorDiv = document.getElementById('milestones-error');
                errorDiv.textContent = message;
                errorDiv.style.display = 'block';
                document.getElementById('milestones-success').style.display = 'none';
                setTimeout(() => {
                    errorDiv.style.display = 'none';
                }, 5000);
            }

            // Show/hide success message
            function showMilestonesSuccess(message) {
                const successDiv = document.getElementById('milestones-success');
                successDiv.textContent = message;
                successDiv.style.display = 'block';
                document.getElementById('milestones-error').style.display = 'none';
                setTimeout(() => {
                    successDiv.style.display = 'none';
                }, 3000);
            }

            // Make table rows clickable
            const participantRows = document.querySelectorAll('.participant-row');
            participantRows.forEach(row => {
                row.addEventListener('click', function(e) {
                    if (e.target.closest('button, form') === null) {
                        showParticipantDetails(this);
                    }
                });
            });

            // Close details modal
            if (closeDetailsBtn) {
                closeDetailsBtn.addEventListener('click', () => detailsModal.classList.add('hidden'));
            }
            detailsModal.addEventListener('click', (e) => {
                if (e.target === detailsModal) detailsModal.classList.add('hidden');
            });

            // Edit button - open edit modal
            if (editBtn) {
                editBtn.addEventListener('click', function() {
                    if (!currentRow) return;
                    editForm.action = '/manage-participants/' + currentRow.getAttribute('data-user-id') + '/update';
                    
                    document.getElementById('edit_user_first_name').value = currentRow.getAttribute('data-first-name') || '';
                    document.getElementById('edit_user_last_name').value = currentRow.getAttribute('data-last-name') || '';
                    document.getElementById('edit_user_email').value = currentRow.getAttribute('data-email') || '';
                    
                    let normalizedRole = (currentRow.getAttribute('data-role') || '').toLowerCase().trim();
                    if (normalizedRole === 'n/a' || normalizedRole === '' || normalizedRole !== 'admin') {
                        normalizedRole = 'participant';
                    }
                    document.getElementById('edit_user_role').value = normalizedRole;
                    document.getElementById('edit_user_dob').value = currentRow.getAttribute('data-dob') || '';
                    document.getElementById('edit_user_phone').value = currentRow.getAttribute('data-phone') || '';
                    document.getElementById('edit_user_city').value = currentRow.getAttribute('data-city') || '';
                    document.getElementById('edit_user_state').value = currentRow.getAttribute('data-state') || '';
                    document.getElementById('edit_user_zip').value = currentRow.getAttribute('data-zip') || '';
                    document.getElementById('edit_user_school').value = currentRow.getAttribute('data-school') || '';
                    document.getElementById('edit_user_employer').value = currentRow.getAttribute('data-employer') || '';
                    document.getElementById('edit_user_field_of_interest').value = currentRow.getAttribute('data-field-of-interest') || '';
                    
                    detailsModal.classList.add('hidden');
                    editModal.classList.remove('hidden');
                });
            }

            // Delete button - open confirmation modal
            if (deleteBtn) {
                deleteBtn.addEventListener('click', function() {
                    if (!currentRow) return;
                    deleteForm.action = '/manage-participants/' + currentRow.getAttribute('data-user-id') + '/delete';
                    detailsModal.classList.add('hidden');
                    deleteModal.classList.remove('hidden');
                });
            }

            // Manage milestones button - open milestones modal
            if (manageMilestonesBtn) {
                manageMilestonesBtn.addEventListener('click', function() {
                    if (!currentRow) return;
                    const userId = parseInt(currentRow.getAttribute('data-user-id'), 10);
                    currentUserId = userId;
                    loadUserMilestones(userId);
                    // Set default date to today
                    const today = new Date().toISOString().split('T')[0];
                    document.getElementById('milestone-date').value = today;
                    // Clear any previous error/success messages
                    document.getElementById('milestones-error').style.display = 'none';
                    document.getElementById('milestones-success').style.display = 'none';
                    detailsModal.classList.add('hidden');
                    milestonesModal.classList.remove('hidden');
                });
            }

            // Add milestone form submission
            if (addMilestoneForm) {
                addMilestoneForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    const milestoneId = document.getElementById('milestone-select').value;
                    const milestoneDate = document.getElementById('milestone-date').value || new Date().toISOString().split('T')[0];
                    
                    if (!milestoneId) {
                        showMilestonesError('Please select a milestone');
                        return;
                    }
                    
                    fetch(`/manage-participants/${currentUserId}/milestones/add`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ 
                            milestone_id: parseInt(milestoneId, 10),
                            milestone_date: milestoneDate
                        })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.error) {
                            showMilestonesError(data.error);
                        } else {
                            showMilestonesSuccess('Milestone added successfully');
                            addMilestoneForm.reset();
                            loadUserMilestones(currentUserId);
                        }
                    })
                    .catch(err => {
                        console.error('Error adding milestone:', err);
                        showMilestonesError('Error adding milestone');
                    });
                });
            }

            // Cancel manage milestones
            if (cancelManageMilestonesBtn) {
                cancelManageMilestonesBtn.addEventListener('click', () => {
                    milestonesModal.classList.add('hidden');
                    // Reload milestones in details modal if it's still open
                    if (currentUserId) {
                        loadUserMilestones(currentUserId);
                    }
                });
            }
            milestonesModal.addEventListener('click', (e) => {
                if (e.target === milestonesModal) {
                    milestonesModal.classList.add('hidden');
                    if (currentUserId) {
                        loadUserMilestones(currentUserId);
                    }
                }
            });

            // Highlight search results (server-side search already filtered the data)
            var searchInfoDiv = document.getElementById('search-results-info');
            if (searchInfoDiv && searchInfoDiv.dataset.search) {
                var searchTerm = searchInfoDiv.dataset.search;
                var rows = document.querySelectorAll('.participant-row');
                
                function highlightText(text, term) {
                    if (!term) return text;
                    var escaped = term.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
                    var regex = new RegExp('(' + escaped + ')', 'gi');
                    return text.replace(regex, '<mark style="background-color: #ffeb3b;">$1</mark>');
                }
                
                rows.forEach(function(row) {
                    var firstCell = row.querySelector('td:nth-child(1)');
                    var lastCell = row.querySelector('td:nth-child(2)');
                    if (firstCell) firstCell.innerHTML = highlightText(firstCell.textContent, searchTerm);
                    if (lastCell) lastCell.innerHTML = highlightText(lastCell.textContent, searchTerm);
                });
            }

            // Cancel edit
            if (cancelEditBtn) {
                cancelEditBtn.addEventListener('click', () => editModal.classList.add('hidden'));
            }
            editModal.addEventListener('click', (e) => {
                if (e.target === editModal) editModal.classList.add('hidden');
            });

            // Cancel delete
            if (cancelDeleteBtn) {
                cancelDeleteBtn.addEventListener('click', () => deleteModal.classList.add('hidden'));
            }
            deleteModal.addEventListener('click', (e) => {
                if (e.target === deleteModal) deleteModal.classList.add('hidden');
            });
        });
    </script>
</body>
</html>
