<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Participants - Ella Rises</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=DM+Serif+Display&display=swap" rel="stylesheet">
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-static">
        <div class="nav-container">
            <ul class="nav-menu">
                <li class="nav-dropdown">
                    <a href="/events" class="nav-dropdown-trigger">Events</a>
                    <div class="nav-dropdown-content">
                        <a href="/events?filter=upcoming">Upcoming Events</a>
                        <a href="/events?filter=past">Past Events</a>
                    </div>
                </li>
                <li class="nav-dropdown">
                    <a href="/about" class="nav-dropdown-trigger">About</a>
                    <div class="nav-dropdown-content">
                        <a href="/about#mission-vision">Mission & Vision</a>
                        <a href="/about#programs">Programs</a>
                        <a href="/about#mariachi">Mariachi</a>
                        <a href="/about#ballet">Ballet Folklorico</a>
                        <a href="/about#steam">STEAM Workshops</a>
                        <a href="/about#summit">Ella Rises Summit</a>
                        <a href="/about#contact">Contact Us</a>
                    </div>
                </li>
                <li><a href="/donate">Donate</a></li>
            </ul>
            <div class="nav-logo">
                <h1><a href="/" style="text-decoration: none; color: inherit;">ELLA RISES</a></h1>
            </div>
            <% if (isLoggedIn) { %>
                <div class="nav-auth">
                    <div class="user-dropdown">
                        <button class="user-dropdown-btn">
                            <%= first_name %> <%= last_name %> ▼
                        </button>
                        <div class="user-dropdown-content">
                            <a href="/dashboard">User Dashboard</a>
                            <a href="/account-info">Account Info</a>
                            <form action="/logout" method="POST" class="dropdown-logout-form">
                                <button type="submit" class="dropdown-logout-btn">Logout</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="nav-auth">
                    <a href="/login" class="btn-signin">Sign In</a>
                    <a href="/register" class="btn-signup">Sign Up</a>
                </div>
            <% } %>
        </div>
    </nav>

    <!-- Breadcrumb -->
    <div class="breadcrumb">
        <a href="/dashboard">← Back to Dashboard</a>
    </div>

    <!-- Main Content -->
    <div class="manage-donations-container">
        <div class="manage-donations-wrapper">
            <!-- Page Header -->
            <div class="manage-donations-header">
                <h1 class="manage-donations-title">Manage Participants</h1>
                <p class="manage-donations-subtitle">Create new, or select a participant to edit or delete</p>
            </div>

            <a href="/manage-participants/new" class="btn-primary btn-create-event">+ Add Participant</a>

            <!-- Error Message Display -->
            <% if (typeof error_message !== 'undefined' && error_message && error_message.length > 0) { %>
                <div class="error-message"><%= error_message %></div>
            <% } %>

            <!-- Participants Table -->
            <% if (user && user.length > 0) { %>
                <div class="donations-table-container">
                    <table class="donations-table">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% user.forEach(function(usr) { %>
                                <%
                                    const role = usr.user_role || '';
                                    const formattedRole = role.charAt(0).toUpperCase() + role.slice(1).toLowerCase();
                                %>
                                <tr 
                                    class="participant-row"
                                    data-user-id="<%= usr.user_id %>"
                                    data-first-name="<%= usr.user_first_name %>"
                                    data-last-name="<%= usr.user_last_name %>"
                                    data-email="<%= usr.user_email %>"
                                    data-role="<%= usr.user_role || 'N/A' %>"
                                    data-dob="<%= usr.user_dob ? new Date(usr.user_dob).toISOString().split('T')[0] : '' %>"
                                    data-phone="<%= usr.user_phone || '' %>"
                                    data-city="<%= usr.user_city || '' %>"
                                    data-state="<%= usr.user_state || '' %>"
                                    data-zip="<%= usr.user_zip || '' %>"
                                    data-school="<%= usr.user_school || '' %>"
                                    data-employer="<%= usr.user_employer || '' %>"
                                    data-field-of-interest="<%= usr.user_field_of_interest || '' %>"
                                    style="cursor: pointer;"
                                >
                                    <td><%= usr.user_first_name %></td>
                                    <td><%= usr.user_last_name %></td>
                                    <td><%= usr.user_email %></td>
                                    <td><%= formattedRole %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <p class="empty-state-message">No participants found.</p>
                </div>
            <% } %>

            <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                <div class="manage-donations-pagination">
                    <% if (currentPage > 1) { %>
                        <a href="/manage-participants?page=<%= currentPage - 1 %>" class="pagination-btn">Previous</a>
                    <% } else { %>
                        <span class="pagination-btn disabled">Previous</span>
                    <% } %>
                    <div class="pagination-pages">
                        <%
                            const maxVisible = 5;
                            let startPage = Math.max(1, currentPage - 2);
                            let endPage = Math.min(totalPages, currentPage + 2);
                            if (endPage - startPage + 1 < maxVisible) {
                                if (startPage === 1) {
                                    endPage = Math.min(totalPages, startPage + maxVisible - 1);
                                } else if (endPage === totalPages) {
                                    startPage = Math.max(1, endPage - maxVisible + 1);
                                }
                            }
                        %>
                        <% if (startPage > 1) { %>
                            <a href="/manage-participants?page=1" class="pagination-page <%= currentPage === 1 ? 'active' : '' %>">1</a>
                            <% if (startPage > 2) { %><span class="pagination-ellipsis">…</span><% } %>
                        <% } %>
                        <% for (let i = startPage; i <= endPage; i++) { %>
                            <a href="/manage-participants?page=<%= i %>" class="pagination-page <%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                        <% } %>
                        <% if (endPage < totalPages) { %>
                            <% if (endPage < totalPages - 1) { %><span class="pagination-ellipsis">…</span><% } %>
                            <a href="/manage-participants?page=<%= totalPages %>" class="pagination-page <%= currentPage === totalPages ? 'active' : '' %>"><%= totalPages %></a>
                        <% } %>
                    </div>
                    <% if (currentPage < totalPages) { %>
                        <a href="/manage-participants?page=<%= currentPage + 1 %>" class="pagination-btn">Next</a>
                    <% } else { %>
                        <span class="pagination-btn disabled">Next</span>
                    <% } %>
                </div>
            <% } %>

            <!-- View Details Modal -->
            <div id="view-details-modal" class="modal hidden">
                <div class="modal-content" style="max-width: 600px; max-height: 90vh; overflow-y: auto;">
                    <h2>Participant Details</h2>
                    <div class="event-details-container">
                        <div class="detail-row">
                            <strong class="detail-label">First Name:</strong>
                            <span id="detail-first-name"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">Last Name:</strong>
                            <span id="detail-last-name"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">Email:</strong>
                            <span id="detail-email"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">Role:</strong>
                            <span id="detail-role"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">Date of Birth:</strong>
                            <span id="detail-dob"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">Phone:</strong>
                            <span id="detail-phone"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">City:</strong>
                            <span id="detail-city"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">State:</strong>
                            <span id="detail-state"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">ZIP Code:</strong>
                            <span id="detail-zip"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">School:</strong>
                            <span id="detail-school"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">Employer:</strong>
                            <span id="detail-employer"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">Field of Interest:</strong>
                            <span id="detail-field-of-interest"></span>
                        </div>
                    </div>
                    <div class="modal-actions">
                        <button type="button" id="btn-edit-participant" class="btn-primary">Edit</button>
                        <button type="button" id="btn-delete-participant" class="btn-delete">Delete</button>
                        <button type="button" id="close-details" class="btn-secondary">Close</button>
                    </div>
                </div>
            </div>

            <!-- Delete Confirmation Modal -->
            <div id="delete-confirm-modal" class="modal hidden">
                <div class="modal-content">
                    <h2>Confirm Deletion</h2>
                    <p>Are you sure you want to delete this participant? This action cannot be undone.</p>
                    <div class="modal-actions">
                        <form id="delete-participant-form" method="POST" style="display: inline-block;">
                            <button type="submit" class="btn-delete">Yes, Delete</button>
                        </form>
                        <button type="button" id="cancel-delete" class="btn-secondary">Cancel</button>
                    </div>
                </div>
            </div>

            <!-- Edit Participant Modal -->
            <div id="edit-participant-modal" class="modal hidden">
                <div class="modal-content" style="max-width: 600px; max-height: 90vh; overflow-y: auto;">
                    <h2>Edit Participant</h2>
                    <form id="edit-participant-form" method="POST">
                        <div class="form-group">
                            <label for="edit_user_first_name">First Name</label>
                            <input type="text" id="edit_user_first_name" name="user_first_name" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_user_last_name">Last Name</label>
                            <input type="text" id="edit_user_last_name" name="user_last_name" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_user_email">Email</label>
                            <input type="email" id="edit_user_email" name="user_email" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_user_role">Role</label>
                            <select id="edit_user_role" name="user_role" required>
                                <option value="participant">Participant</option>
                                <option value="admin">Admin</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="edit_user_dob">Date of Birth</label>
                            <input type="date" id="edit_user_dob" name="user_dob">
                        </div>
                        <div class="form-group">
                            <label for="edit_user_phone">Phone</label>
                            <input type="tel" id="edit_user_phone" name="user_phone" placeholder="(555) 123-4567">
                        </div>
                        <div class="form-group">
                            <label for="edit_user_city">City</label>
                            <input type="text" id="edit_user_city" name="user_city">
                        </div>
                        <div class="form-group">
                            <label for="edit_user_state">State</label>
                            <input type="text" id="edit_user_state" name="user_state" placeholder="UT" maxlength="2">
                        </div>
                        <div class="form-group">
                            <label for="edit_user_zip">ZIP Code</label>
                            <input type="text" id="edit_user_zip" name="user_zip" pattern="[0-9]{5}" placeholder="84000">
                        </div>
                        <div class="form-group">
                            <label for="edit_user_school">School</label>
                            <input type="text" id="edit_user_school" name="user_school">
                        </div>
                        <div class="form-group">
                            <label for="edit_user_employer">Employer</label>
                            <input type="text" id="edit_user_employer" name="user_employer">
                        </div>
                        <div class="form-group">
                            <label for="edit_user_field_of_interest">Field of Interest</label>
                            <input type="text" id="edit_user_field_of_interest" name="user_field_of_interest">
                        </div>
                        <div class="modal-actions">
                            <button type="submit" class="btn-primary">Save Changes</button>
                            <button type="button" id="cancel-edit-participant" class="btn-secondary">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>Ella Rises</h3>
                <p>Empowering young women through culturally rooted educational programs.</p>
            </div>
            <div class="footer-section">
                <h4>Quick Links</h4>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/events">Event Information</a></li>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/about#contact">Contact</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Programs</h4>
                <ul>
                    <li><a href="/about#mariachi">Mariachi</a></li>
                    <li><a href="/about#ballet">Ballet Folklorico</a></li>
                    <li><a href="/about#steam">STEAM Workshops</a></li>
                    <li><a href="/about#summit">Ella Rises Summit</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Get Involved</h4>
                <ul>
                    <li><a href="/about#contact">Volunteer</a></li>
                    <li><a href="/donate">Donate</a></li>
                    <li><a href="/about#contact">Sponsor</a></li>
                    <li><a href="/analytics">Dashboard</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Ella Rises. All rights reserved.</p>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // User dropdown functionality
            const userDropdown = document.querySelector('.user-dropdown');
            const dropdownBtn = document.querySelector('.user-dropdown-btn');
            
            if (dropdownBtn) {
                dropdownBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    userDropdown.classList.toggle('active');
                });
            }
            
            document.addEventListener('click', function(e) {
                if (userDropdown && !userDropdown.contains(e.target)) {
                    userDropdown.classList.remove('active');
                }
            });

            // Current row being viewed
            let currentRow = null;

            // Modal elements
            const detailsModal = document.getElementById('view-details-modal');
            const editModal = document.getElementById('edit-participant-modal');
            const deleteModal = document.getElementById('delete-confirm-modal');
            const closeDetailsBtn = document.getElementById('close-details');
            const editBtn = document.getElementById('btn-edit-participant');
            const deleteBtn = document.getElementById('btn-delete-participant');
            const editForm = document.getElementById('edit-participant-form');
            const deleteForm = document.getElementById('delete-participant-form');
            const cancelEditBtn = document.getElementById('cancel-edit-participant');
            const cancelDeleteBtn = document.getElementById('cancel-delete');

            // Helper function to format date for display
            function formatDateForDisplay(dateString) {
                if (!dateString || dateString === '') return 'N/A';
                try {
                    const date = new Date(dateString);
                    if (isNaN(date.getTime())) return dateString;
                    const month = String(date.getMonth() + 1).padStart(2, '0');
                    const day = String(date.getDate()).padStart(2, '0');
                    const year = date.getFullYear();
                    return `${month}/${day}/${year}`;
                } catch (e) {
                    return dateString || 'N/A';
                }
            }

            // Show details modal
            function showParticipantDetails(row) {
                currentRow = row;
                const role = row.getAttribute('data-role');
                const formattedRole = role && role !== 'N/A' 
                    ? role.charAt(0).toUpperCase() + role.slice(1).toLowerCase()
                    : 'N/A';

                document.getElementById('detail-first-name').textContent = row.getAttribute('data-first-name') || 'N/A';
                document.getElementById('detail-last-name').textContent = row.getAttribute('data-last-name') || 'N/A';
                document.getElementById('detail-email').textContent = row.getAttribute('data-email') || 'N/A';
                document.getElementById('detail-role').textContent = formattedRole;
                document.getElementById('detail-dob').textContent = formatDateForDisplay(row.getAttribute('data-dob'));
                document.getElementById('detail-phone').textContent = row.getAttribute('data-phone') || 'N/A';
                document.getElementById('detail-city').textContent = row.getAttribute('data-city') || 'N/A';
                document.getElementById('detail-state').textContent = row.getAttribute('data-state') || 'N/A';
                document.getElementById('detail-zip').textContent = row.getAttribute('data-zip') || 'N/A';
                document.getElementById('detail-school').textContent = row.getAttribute('data-school') || 'N/A';
                document.getElementById('detail-employer').textContent = row.getAttribute('data-employer') || 'N/A';
                document.getElementById('detail-field-of-interest').textContent = row.getAttribute('data-field-of-interest') || 'N/A';
                detailsModal.classList.remove('hidden');
            }

            // Make table rows clickable
            const participantRows = document.querySelectorAll('.participant-row');
            participantRows.forEach(row => {
                row.addEventListener('click', function(e) {
                    if (e.target.closest('button, form') === null) {
                        showParticipantDetails(this);
                    }
                });
            });

            // Close details modal
            if (closeDetailsBtn) {
                closeDetailsBtn.addEventListener('click', () => detailsModal.classList.add('hidden'));
            }
            detailsModal.addEventListener('click', (e) => {
                if (e.target === detailsModal) detailsModal.classList.add('hidden');
            });

            // Edit button - open edit modal
            if (editBtn) {
                editBtn.addEventListener('click', function() {
                    if (!currentRow) return;
                    editForm.action = '/manage-participants/' + currentRow.getAttribute('data-user-id') + '/update';
                    
                    document.getElementById('edit_user_first_name').value = currentRow.getAttribute('data-first-name') || '';
                    document.getElementById('edit_user_last_name').value = currentRow.getAttribute('data-last-name') || '';
                    document.getElementById('edit_user_email').value = currentRow.getAttribute('data-email') || '';
                    
                    let normalizedRole = (currentRow.getAttribute('data-role') || '').toLowerCase().trim();
                    if (normalizedRole === 'n/a' || normalizedRole === '' || normalizedRole !== 'admin') {
                        normalizedRole = 'participant';
                    }
                    document.getElementById('edit_user_role').value = normalizedRole;
                    document.getElementById('edit_user_dob').value = currentRow.getAttribute('data-dob') || '';
                    document.getElementById('edit_user_phone').value = currentRow.getAttribute('data-phone') || '';
                    document.getElementById('edit_user_city').value = currentRow.getAttribute('data-city') || '';
                    document.getElementById('edit_user_state').value = currentRow.getAttribute('data-state') || '';
                    document.getElementById('edit_user_zip').value = currentRow.getAttribute('data-zip') || '';
                    document.getElementById('edit_user_school').value = currentRow.getAttribute('data-school') || '';
                    document.getElementById('edit_user_employer').value = currentRow.getAttribute('data-employer') || '';
                    document.getElementById('edit_user_field_of_interest').value = currentRow.getAttribute('data-field-of-interest') || '';
                    
                    detailsModal.classList.add('hidden');
                    editModal.classList.remove('hidden');
                });
            }

            // Delete button - open confirmation modal
            if (deleteBtn) {
                deleteBtn.addEventListener('click', function() {
                    if (!currentRow) return;
                    deleteForm.action = '/manage-participants/' + currentRow.getAttribute('data-user-id') + '/delete';
                    detailsModal.classList.add('hidden');
                    deleteModal.classList.remove('hidden');
                });
            }

            // Cancel edit
            if (cancelEditBtn) {
                cancelEditBtn.addEventListener('click', () => editModal.classList.add('hidden'));
            }
            editModal.addEventListener('click', (e) => {
                if (e.target === editModal) editModal.classList.add('hidden');
            });

            // Cancel delete
            if (cancelDeleteBtn) {
                cancelDeleteBtn.addEventListener('click', () => deleteModal.classList.add('hidden'));
            }
            deleteModal.addEventListener('click', (e) => {
                if (e.target === deleteModal) deleteModal.classList.add('hidden');
            });
        });
    </script>
</body>
</html>
