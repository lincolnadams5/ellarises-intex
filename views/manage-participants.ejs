    </footer>

    <script>
        // User dropdown functionality
        document.addEventListener('DOMContentLoaded', function() {
            const userDropdown = document.querySelector('.user-dropdown');
            const dropdownBtn = document.querySelector('.user-dropdown-btn');
            
            if (dropdownBtn) {
                dropdownBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    userDropdown.classList.toggle('active');
                });
            }
            
            // Close dropdown when clicking outside
            document.addEventListener('click', function(e) {
                if (userDropdown && !userDropdown.contains(e.target)) {
                    userDropdown.classList.remove('active');
                }
            });

            // View Details modal logic
            const detailsModal = document.getElementById('view-details-modal');
            const closeDetailsBtn = document.getElementById('close-details');

            // Helper function to format date for display
            function formatDateForDisplay(dateString) {
                if (!dateString || dateString === '') {
                    return 'N/A';
                }
                
                try {
                    const date = new Date(dateString);
                    if (isNaN(date.getTime())) {
                        return dateString; // Return as-is if can't parse
                    }
                    
                    // Format as MM/DD/YYYY
                    const month = String(date.getMonth() + 1).padStart(2, '0');
                    const day = String(date.getDate()).padStart(2, '0');
                    const year = date.getFullYear();
                    return `${month}/${day}/${year}`;
                } catch (e) {
                    return dateString || 'N/A';
                }
            }

            // Function to populate and show the details modal
            function showParticipantDetails(row) {
                // Get all data attributes from the row
                const firstName = row.getAttribute('data-first-name');
                const lastName = row.getAttribute('data-last-name');
                const email = row.getAttribute('data-email');
                const role = row.getAttribute('data-role');
                const dob = row.getAttribute('data-dob');
                const phone = row.getAttribute('data-phone');
                const city = row.getAttribute('data-city');
                const state = row.getAttribute('data-state');
                const zip = row.getAttribute('data-zip');
                const school = row.getAttribute('data-school');
                const employer = row.getAttribute('data-employer');
                const fieldOfInterest = row.getAttribute('data-field-of-interest');

                // Format role: capitalize first letter
                const formattedRole = role && role !== 'N/A' 
                    ? role.charAt(0).toUpperCase() + role.slice(1).toLowerCase()
                    : 'N/A';

                // Populate modal with data
                document.getElementById('detail-first-name').textContent = firstName || 'N/A';
                document.getElementById('detail-last-name').textContent = lastName || 'N/A';
                document.getElementById('detail-email').textContent = email || 'N/A';
                document.getElementById('detail-role').textContent = formattedRole;
                document.getElementById('detail-dob').textContent = formatDateForDisplay(dob);
                document.getElementById('detail-phone').textContent = phone || 'N/A';
                document.getElementById('detail-city').textContent = city || 'N/A';
                document.getElementById('detail-state').textContent = state || 'N/A';
                document.getElementById('detail-zip').textContent = zip || 'N/A';
                document.getElementById('detail-school').textContent = school || 'N/A';
                document.getElementById('detail-employer').textContent = employer || 'N/A';
                document.getElementById('detail-field-of-interest').textContent = fieldOfInterest || 'N/A';

                // Show modal
                detailsModal.classList.remove('hidden');
            }

            // Make table rows clickable
            const participantRows = document.querySelectorAll('.participant-row');
            if (detailsModal && participantRows.length > 0) {
                participantRows.forEach(row => {
                    row.addEventListener('click', function(e) {
                        // Only trigger if clicking directly on the row, not on buttons/forms
                        if (e.target.closest('button, form') === null) {
                            showParticipantDetails(this);
                        }
                    });
                });
            }

            if (detailsModal) {
                if (closeDetailsBtn) {
                    closeDetailsBtn.addEventListener('click', function() {
                        detailsModal.classList.add('hidden');
                    });
                }

                // Close modal when clicking outside content
                detailsModal.addEventListener('click', function(e) {
                    if (e.target === detailsModal) {
                        detailsModal.classList.add('hidden');
                    }
                });
            }

            // Edit Participant modal logic
            const editModal = document.getElementById('edit-participant-modal');
            const editForm = document.getElementById('edit-participant-form');
            const cancelEditBtn = document.getElementById('cancel-edit-participant');

            // Helper function to format date for HTML date input (YYYY-MM-DD)
            function formatDateForInput(dateString) {
                if (!dateString || dateString === '') {
                    return '';
                }
                
                // If it's already in YYYY-MM-DD format, return as is
                if (/^\d{4}-\d{2}-\d{2}$/.test(dateString)) {
                    return dateString;
                }
                
                // Try to parse the date and format it
                const date = new Date(dateString);
                if (isNaN(date.getTime())) {
                    return '';
                }
                
                // Format as YYYY-MM-DD
                const year = date.getFullYear();
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const day = String(date.getDate()).padStart(2, '0');
                return `${year}-${month}-${day}`;
            }

            // Function to open edit modal and populate with data
            window.openEditParticipantModal = function(button) {
                const row = button.closest('.participant-row');
                const userId = row.getAttribute('data-user-id');
                const firstName = row.getAttribute('data-first-name');
                const lastName = row.getAttribute('data-last-name');
                const email = row.getAttribute('data-email');
                const role = row.getAttribute('data-role');
                const dob = row.getAttribute('data-dob');
                const phone = row.getAttribute('data-phone');
                const city = row.getAttribute('data-city');
                const state = row.getAttribute('data-state');
                const zip = row.getAttribute('data-zip');
                const school = row.getAttribute('data-school');
                const employer = row.getAttribute('data-employer');
                const fieldOfInterest = row.getAttribute('data-field-of-interest');

                // Set form action
                editForm.action = '/manage-participants/' + userId + '/update';

                // Populate form fields
                document.getElementById('edit_user_first_name').value = firstName || '';
                document.getElementById('edit_user_last_name').value = lastName || '';
                document.getElementById('edit_user_email').value = email || '';
                
                // Normalize role value (handle case, 'N/A', and ensure it matches 'admin' or 'participant')
                let normalizedRole = (role || '').toLowerCase().trim();
                if (normalizedRole === 'n/a' || normalizedRole === '' || normalizedRole !== 'admin') {
                    normalizedRole = 'participant'; // Default to participant if not admin
                }
                document.getElementById('edit_user_role').value = normalizedRole;
                document.getElementById('edit_user_dob').value = formatDateForInput(dob);
                document.getElementById('edit_user_phone').value = phone || '';
                document.getElementById('edit_user_city').value = city || '';
                document.getElementById('edit_user_state').value = state || '';
                document.getElementById('edit_user_zip').value = zip || '';
                document.getElementById('edit_user_school').value = school || '';
                document.getElementById('edit_user_employer').value = employer || '';
                document.getElementById('edit_user_field_of_interest').value = fieldOfInterest || '';

                // Show modal
                editModal.classList.remove('hidden');
            };

            if (editModal) {
                if (cancelEditBtn) {
                    cancelEditBtn.addEventListener('click', function() {
                        editModal.classList.add('hidden');
                    });
                }

                // Close modal when clicking outside content
                editModal.addEventListener('click', function(e) {
                    if (e.target === editModal) {
                        editModal.classList.add('hidden');
                    }
                });
            }
        });
    </script>
</body>
</html>
