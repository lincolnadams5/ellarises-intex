                            <div class="form-group">
                                <label for="milestone-select">Select Milestone</label>
                                <select id="milestone-select" name="milestone_id" required style="width: 100%; padding: 0.6rem; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 1rem; font-family: var(--font-primary);">
