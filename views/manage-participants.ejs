    <!-- Main Content -->
    <div class="manage-donations-container">
        <div class="manage-donations-wrapper">
            <!-- Page Header -->
            <div class="manage-donations-header">
                <h1 class="manage-donations-title">Manage Participants</h1>
                <p class="manage-donations-subtitle">Create new, or select a participant to edit or delete</p>
            </div>

            <div style="display: flex; gap: 1rem; align-items: center; margin-bottom: 1.5rem; flex-wrap: wrap;">
                <a href="/manage-participants/new" class="btn-primary btn-create-event">+ Add Participant</a>
                
                <!-- Search Bar - This is a FORM that submits to the server -->
                <form action="/manage-participants" method="GET" style="display: flex; gap: 0.5rem; flex: 1; min-width: 300px; max-width: 500px;">
                    <input 
                        type="text" 
                        name="search"
                        id="participant-search-input"
                        placeholder="Search by name..." 
                        value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
                        style="flex: 1; padding: 0.6rem 1rem; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 1rem; font-family: var(--font-primary); transition: border-color 0.3s ease;"
                        onfocus="this.style.borderColor='var(--color-secondary)'"
                        onblur="this.style.borderColor='#e0e0e0'"
                    >
                    <button 
                        type="submit"
                        style="padding: 0.6rem 1.5rem; background-color: var(--color-secondary); color: white; border: none; border-radius: 8px; cursor: pointer; font-weight: 500; transition: all 0.3s ease;"
                    >
                        Search
                    </button>
                    <% if (typeof searchQuery !== 'undefined' && searchQuery && searchQuery.trim() !== '') { %>
                    <a 
                        href="/manage-participants"
                        style="padding: 0.6rem 1rem; background-color: #6c757d; color: white; border: none; border-radius: 8px; text-decoration: none; font-weight: 500; display: inline-flex; align-items: center;"
                    >
                        Clear
                    </a>
                    <% } %>
                </form>
            </div>

            <!-- Search Results Info -->
            <% if (typeof searchQuery !== 'undefined' && searchQuery && searchQuery.trim() !== '') { %>
            <div id="search-results-info" data-search="<%= searchQuery %>" style="margin-bottom: 1rem; color: var(--color-text-light); font-size: 0.95rem;">
                Showing results for "<strong><%= searchQuery %></strong>" (<%= typeof totalCount !== 'undefined' ? totalCount : 0 %> found)
            </div>
            <% } %>

            <!-- Error Message Display -->
            <% if (typeof error_message !== 'undefined' && error_message && error_message.length > 0) { %>
                <div class="error-message"><%= error_message %></div>
            <% } %>

            <!-- Participants Table -->
            <% if (user && user.length > 0) { %>
                <div class="donations-table-container">
                    <table class="donations-table">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% user.forEach(function(usr) { %>
                                <%
                                    const role = usr.user_role || '';
                                    const formattedRole = role.charAt(0).toUpperCase() + role.slice(1).toLowerCase();
                                %>
                                <tr 
                                    class="participant-row"
                                    data-user-id="<%= usr.user_id %>"
                                    data-first-name="<%= usr.user_first_name %>"
                                    data-last-name="<%= usr.user_last_name %>"
                                    data-email="<%= usr.user_email %>"
                                    data-role="<%= usr.user_role || 'N/A' %>"
                                    data-dob="<%= usr.user_dob ? new Date(usr.user_dob).toISOString().split('T')[0] : '' %>"
                                    data-phone="<%= usr.user_phone || '' %>"
                                    data-city="<%= usr.user_city || '' %>"
                                    data-state="<%= usr.user_state || '' %>"
                                    data-zip="<%= usr.user_zip || '' %>"
                                    data-school="<%= usr.user_school || '' %>"
                                    data-employer="<%= usr.user_employer || '' %>"
                                    data-field-of-interest="<%= usr.user_field_of_interest || '' %>"
                                    style="cursor: pointer;"
                                >
                                    <td><%= usr.user_first_name %></td>
                                    <td><%= usr.user_last_name %></td>
                                    <td><%= usr.user_email %></td>
                                    <td><%= formattedRole %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <p class="empty-state-message">No participants found.</p>
                </div>
            <% } %>

            <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                <div class="manage-donations-pagination">
                    <%
                        // Build search parameter for pagination links
                        var searchParam = '';
                        if (typeof searchQuery !== 'undefined' && searchQuery && searchQuery.trim() !== '') {
                            searchParam = '&search=' + encodeURIComponent(searchQuery);
                        }
                    %>
                    <% if (currentPage > 1) { %>
                        <a href="/manage-participants?page=<%= currentPage - 1 %><%= searchParam %>" class="pagination-btn">Previous</a>
                    <% } else { %>
                        <span class="pagination-btn disabled">Previous</span>
                    <% } %>
                    <div class="pagination-pages">
                        <%
                            const maxVisible = 5;
                            let startPage = Math.max(1, currentPage - 2);
                            let endPage = Math.min(totalPages, currentPage + 2);
                            if (endPage - startPage + 1 < maxVisible) {
                                if (startPage === 1) {
                                    endPage = Math.min(totalPages, startPage + maxVisible - 1);
                                } else if (endPage === totalPages) {
                                    startPage = Math.max(1, endPage - maxVisible + 1);
                                }
                            }
                        %>
                        <% if (startPage > 1) { %>
                            <a href="/manage-participants?page=1<%= searchParam %>" class="pagination-page <%= currentPage === 1 ? 'active' : '' %>">1</a>
                            <% if (startPage > 2) { %><span class="pagination-ellipsis">‚Ä¶</span><% } %>
                        <% } %>
                        <% for (let i = startPage; i <= endPage; i++) { %>
                            <a href="/manage-participants?page=<%= i %><%= searchParam %>" class="pagination-page <%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                        <% } %>
                        <% if (endPage < totalPages) { %>
                            <% if (endPage < totalPages - 1) { %><span class="pagination-ellipsis">‚Ä¶</span><% } %>
                            <a href="/manage-participants?page=<%= totalPages %><%= searchParam %>" class="pagination-page <%= currentPage === totalPages ? 'active' : '' %>"><%= totalPages %></a>
                        <% } %>
                    </div>
                    <% if (currentPage < totalPages) { %>
                        <a href="/manage-participants?page=<%= currentPage + 1 %><%= searchParam %>" class="pagination-btn">Next</a>
                    <% } else { %>
                        <span class="pagination-btn disabled">Next</span>
                    <% } %>
                </div>
            <% } %>

