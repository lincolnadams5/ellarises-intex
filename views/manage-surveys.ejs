<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Surveys - Ella Rises</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=DM+Serif+Display&display=swap" rel="stylesheet">
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-static">
        <div class="nav-container">
            <ul class="nav-menu">
                <li class="nav-dropdown">
                    <a href="/events" class="nav-dropdown-trigger">Events</a>
                    <div class="nav-dropdown-content">
                        <a href="/events?filter=upcoming">Upcoming Events</a>
                        <a href="/events?filter=past">Past Events</a>
                    </div>
                </li>
                <li class="nav-dropdown">
                    <a href="/about" class="nav-dropdown-trigger">About</a>
                    <div class="nav-dropdown-content">
                        <a href="/about#mission-vision">Mission & Vision</a>
                        <a href="/about#programs">Programs</a>
                        <a href="/about#mariachi">Mariachi</a>
                        <a href="/about#ballet">Ballet Folklorico</a>
                        <a href="/about#steam">STEAM Workshops</a>
                        <a href="/about#summit">Ella Rises Summit</a>
                        <a href="/about#contact">Contact Us</a>
                    </div>
                </li>
                <li><a href="/donate">Donate</a></li>
            </ul>
            <div class="nav-logo">
                <h1><a href="/" style="text-decoration: none; color: inherit;">ELLA RISES</a></h1>
            </div>
            <% if (isLoggedIn) { %>
                <div class="nav-auth">
                    <div class="user-dropdown">
                        <button class="user-dropdown-btn">
                            <%= first_name %> <%= last_name %> ▼
                        </button>
                        <div class="user-dropdown-content">
                            <a href="/dashboard">User Dashboard</a>
                            <a href="/account-info">Account Info</a>
                            <form action="/logout" method="POST" class="dropdown-logout-form">
                                <button type="submit" class="dropdown-logout-btn">Logout</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="nav-auth">
                    <a href="/login" class="btn-signin">Sign In</a>
                    <a href="/register" class="btn-signup">Sign Up</a>
                </div>
            <% } %>
        </div>
    </nav>

    <!-- Breadcrumb -->
    <div class="breadcrumb">
        <a href="/dashboard">← Back to Dashboard</a>
    </div>

    <!-- Main Content -->
    <div class="manage-donations-container">
        <div class="manage-donations-wrapper">
            <!-- Page Header -->
            <div class="manage-donations-header">
                <h1 class="manage-donations-title">Survey Results</h1>
                <p class="manage-donations-subtitle">Select a survey to view details, edit, or delete</p>
            </div>

            <!-- Error Message Display -->
            <% if (typeof error_message !== 'undefined' && error_message && error_message.length > 0) { %>
                <div class="error-message"><%= error_message %></div>
            <% } %>

            <!-- Surveys Table -->
            <% if (survey && survey.length > 0) { %>
                <div class="donations-table-container">
                    <table class="donations-table">
                        <thead>
                            <tr>
                                <th>Event Name</th>
                                <th>Submission Date</th>
                                <th>Name</th>
                                <th>Location</th>
                                <th>Overall Score</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% survey.forEach(function(srv) { %>
                                <%
                                    let formattedDate = 'N/A';
                                    let dateRaw = '';
                                    if (srv.survey_submission_date) {
                                        const date = new Date(srv.survey_submission_date);
                                        const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
                                        formattedDate = months[date.getMonth()] + ' ' + date.getDate() + ', ' + date.getFullYear();
                                        dateRaw = date.toISOString().split('T')[0];
                                    }
                                %>
                                <tr 
                                    class="survey-row"
                                    data-survey-id="<%= srv.survey_id %>"
                                    data-submission-date="<%= formattedDate %>"
                                    data-submission-date-raw="<%= dateRaw %>"
                                    data-first-name="<%= srv.user_first_name %>"
                                    data-last-name="<%= srv.user_last_name %>"
                                    data-event-name="<%= srv.event_name || 'N/A' %>"
                                    data-event-location="<%= srv.event_location || 'N/A' %>"
                                    data-overall-score="<%= srv.overall_score || 'N/A' %>"
                                    style="cursor: pointer;"
                                >
                                    <td><%= srv.event_name || 'N/A' %></td>  
                                    <td><%= formattedDate %></td>
                                    <td><%= srv.user_last_name %>, <%= srv.user_first_name %></td>
                                    <td><%= srv.event_location || 'N/A' %></td>
                                    <td><%= srv.overall_score || 'N/A' %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <p class="empty-state-message">No survey responses found.</p>
                </div>
            <% } %>

            <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                <div class="manage-donations-pagination">
                    <% if (currentPage > 1) { %>
                        <a href="/manage-surveys?page=<%= currentPage - 1 %>" class="pagination-btn">Previous</a>
                    <% } else { %>
                        <span class="pagination-btn disabled">Previous</span>
                    <% } %>
                    <div class="pagination-pages">
                        <%
                            const maxVisible = 5;
                            let startPage = Math.max(1, currentPage - 2);
                            let endPage = Math.min(totalPages, currentPage + 2);
                            if (endPage - startPage + 1 < maxVisible) {
                                if (startPage === 1) {
                                    endPage = Math.min(totalPages, startPage + maxVisible - 1);
                                } else if (endPage === totalPages) {
                                    startPage = Math.max(1, endPage - maxVisible + 1);
                                }
                            }
                        %>
                        <% if (startPage > 1) { %>
                            <a href="/manage-surveys?page=1" class="pagination-page <%= currentPage === 1 ? 'active' : '' %>">1</a>
                            <% if (startPage > 2) { %><span class="pagination-ellipsis">…</span><% } %>
                        <% } %>
                        <% for (let i = startPage; i <= endPage; i++) { %>
                            <a href="/manage-surveys?page=<%= i %>" class="pagination-page <%= i === currentPage ? 'active' : '' %>"><%= i %></a>
                        <% } %>
                        <% if (endPage < totalPages) { %>
                            <% if (endPage < totalPages - 1) { %><span class="pagination-ellipsis">…</span><% } %>
                            <a href="/manage-surveys?page=<%= totalPages %>" class="pagination-page <%= currentPage === totalPages ? 'active' : '' %>"><%= totalPages %></a>
                        <% } %>
                    </div>
                    <% if (currentPage < totalPages) { %>
                        <a href="/manage-surveys?page=<%= currentPage + 1 %>" class="pagination-btn">Next</a>
                    <% } else { %>
                        <span class="pagination-btn disabled">Next</span>
                    <% } %>
                </div>
            <% } %>

            <!-- View Details Modal -->
            <div id="view-details-modal" class="modal hidden">
                <div class="modal-content">
                    <h2>Survey Details</h2>
                    <div class="event-details-container">
                        <div class="detail-row">
                            <strong class="detail-label">Survey ID:</strong>
                            <span id="detail-survey-id"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">Submission Date:</strong>
                            <span id="detail-submission-date"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">Participant Name:</strong>
                            <span id="detail-participant-name"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">Event Name:</strong>
                            <span id="detail-event-name"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">Event Location:</strong>
                            <span id="detail-event-location"></span>
                        </div>
                        <div class="detail-row">
                            <strong class="detail-label">Overall Score:</strong>
                            <span id="detail-overall-score"></span>
                        </div>
                    </div>
                    <div class="modal-actions">
                        <button type="button" id="btn-edit-survey" class="btn-primary">Edit</button>
                        <button type="button" id="btn-delete-survey" class="btn-delete">Delete</button>
                        <button type="button" id="close-details" class="btn-secondary">Close</button>
                    </div>
                </div>
            </div>

            <!-- Delete Confirmation Modal -->
            <div id="delete-confirm-modal" class="modal hidden">
                <div class="modal-content">
                    <h2>Confirm Deletion</h2>
                    <p>Are you sure you want to delete this survey response? This action cannot be undone.</p>
                    <div class="modal-actions">
                        <form id="delete-survey-form" method="POST" style="display: inline-block;">
                            <button type="submit" class="btn-delete">Yes, Delete</button>
                        </form>
                        <button type="button" id="cancel-delete" class="btn-secondary">Cancel</button>
                    </div>
                </div>
            </div>

            <!-- Edit Survey Modal -->
            <div id="edit-survey-modal" class="modal hidden">
                <div class="modal-content">
                    <h2>Edit Survey</h2>
                    <form id="edit-survey-form" method="POST">
                        <div class="form-group">
                            <label for="edit_overall_score">Overall Score (1-10)</label>
                            <input type="number" id="edit_overall_score" name="overall_score" min="1" max="10" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_survey_submission_date">Submission Date</label>
                            <input type="date" id="edit_survey_submission_date" name="survey_submission_date" required>
                        </div>
                        <div class="modal-actions">
                            <button type="submit" class="btn-primary">Save Changes</button>
                            <button type="button" id="cancel-edit-survey" class="btn-secondary">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>Ella Rises</h3>
                <p>Empowering young women through culturally rooted educational programs.</p>
            </div>
            <div class="footer-section">
                <h4>Quick Links</h4>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/events">Event Information</a></li>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/about#contact">Contact</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Programs</h4>
                <ul>
                    <li><a href="/about#mariachi">Mariachi</a></li>
                    <li><a href="/about#ballet">Ballet Folklorico</a></li>
                    <li><a href="/about#steam">STEAM Workshops</a></li>
                    <li><a href="/about#summit">Ella Rises Summit</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Get Involved</h4>
                <ul>
                    <li><a href="/about#contact">Volunteer</a></li>
                    <li><a href="/donate">Donate</a></li>
                    <li><a href="/about#contact">Sponsor</a></li>
                    <li><a href="/analytics">Dashboard</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Ella Rises. All rights reserved.</p>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // User dropdown functionality
            const userDropdown = document.querySelector('.user-dropdown');
            const dropdownBtn = document.querySelector('.user-dropdown-btn');
            
            if (dropdownBtn) {
                dropdownBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    userDropdown.classList.toggle('active');
                });
            }
            
            document.addEventListener('click', function(e) {
                if (userDropdown && !userDropdown.contains(e.target)) {
                    userDropdown.classList.remove('active');
                }
            });

            // Current row being viewed
            let currentRow = null;

            // Modal elements
            const detailsModal = document.getElementById('view-details-modal');
            const editModal = document.getElementById('edit-survey-modal');
            const deleteModal = document.getElementById('delete-confirm-modal');
            const closeDetailsBtn = document.getElementById('close-details');
            const editBtn = document.getElementById('btn-edit-survey');
            const deleteBtn = document.getElementById('btn-delete-survey');
            const editForm = document.getElementById('edit-survey-form');
            const deleteForm = document.getElementById('delete-survey-form');
            const cancelEditBtn = document.getElementById('cancel-edit-survey');
            const cancelDeleteBtn = document.getElementById('cancel-delete');

            // Show details modal
            function showSurveyDetails(row) {
                currentRow = row;
                document.getElementById('detail-survey-id').textContent = row.getAttribute('data-survey-id');
                document.getElementById('detail-submission-date').textContent = row.getAttribute('data-submission-date');
                document.getElementById('detail-participant-name').textContent = row.getAttribute('data-first-name') + ' ' + row.getAttribute('data-last-name');
                document.getElementById('detail-event-name').textContent = row.getAttribute('data-event-name');
                document.getElementById('detail-event-location').textContent = row.getAttribute('data-event-location');
                document.getElementById('detail-overall-score').textContent = row.getAttribute('data-overall-score');
                detailsModal.classList.remove('hidden');
            }

            // Make table rows clickable
            const surveyRows = document.querySelectorAll('.survey-row');
            surveyRows.forEach(row => {
                row.addEventListener('click', function(e) {
                    if (e.target.closest('button, form') === null) {
                        showSurveyDetails(this);
                    }
                });
            });

            // Close details modal
            if (closeDetailsBtn) {
                closeDetailsBtn.addEventListener('click', () => detailsModal.classList.add('hidden'));
            }
            detailsModal.addEventListener('click', (e) => {
                if (e.target === detailsModal) detailsModal.classList.add('hidden');
            });

            // Edit button - open edit modal
            if (editBtn) {
                editBtn.addEventListener('click', function() {
                    if (!currentRow) return;
                    editForm.action = '/manage-surveys/' + currentRow.getAttribute('data-survey-id') + '/update';
                    
                    const score = currentRow.getAttribute('data-overall-score');
                    document.getElementById('edit_overall_score').value = score !== 'N/A' ? score : '';
                    document.getElementById('edit_survey_submission_date').value = currentRow.getAttribute('data-submission-date-raw') || '';
                    
                    detailsModal.classList.add('hidden');
                    editModal.classList.remove('hidden');
                });
            }

            // Delete button - open confirmation modal
            if (deleteBtn) {
                deleteBtn.addEventListener('click', function() {
                    if (!currentRow) return;
                    deleteForm.action = '/manage-surveys/' + currentRow.getAttribute('data-survey-id') + '/delete';
                    detailsModal.classList.add('hidden');
                    deleteModal.classList.remove('hidden');
                });
            }

            // Cancel edit
            if (cancelEditBtn) {
                cancelEditBtn.addEventListener('click', () => editModal.classList.add('hidden'));
            }
            editModal.addEventListener('click', (e) => {
                if (e.target === editModal) editModal.classList.add('hidden');
            });

            // Cancel delete
            if (cancelDeleteBtn) {
                cancelDeleteBtn.addEventListener('click', () => deleteModal.classList.add('hidden'));
            }
            deleteModal.addEventListener('click', (e) => {
                if (e.target === deleteModal) deleteModal.classList.add('hidden');
            });
        });
    </script>
</body>
</html>
