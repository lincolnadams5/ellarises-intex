        <div class="nav-container">
            <ul class="nav-menu">
                <!-- Events Dropdown -->
                <li class="nav-dropdown">
                    <a href="/events" class="nav-dropdown-trigger">Events</a>
                    <div class="nav-dropdown-content">
                        <a href="/events?filter=upcoming">Upcoming Events</a>
                        <a href="/events?filter=past">Past Events</a>
                    </div>
                </li>
                <!-- About Dropdown -->
                <li class="nav-dropdown">
                    <a href="/about" class="nav-dropdown-trigger">About</a>
                    <div class="nav-dropdown-content">
                        <a href="/about#mission-vision">Mission & Vision</a>
                        <a href="/about#programs">Programs</a>
                        <a href="/about#mariachi">Mariachi</a>
                        <a href="/about#ballet">Ballet Folklorico</a>
                        <a href="/about#steam">STEAM Workshops</a>
                        <a href="/about#summit">Ella Rises Summit</a>
                        <a href="/about#contact">Contact Us</a>
                    </div>
                </li>
                <li><a href="/donate">Donate</a></li>
            </ul>
            <div class="nav-logo">
                <h1><a href="/" style="text-decoration: none; color: inherit;">ELLA RISES</a></h1>
            </div>
            <div class="nav-right">
                <% if (isLoggedIn) { %>
                    <div class="nav-auth">
                        <div class="user-dropdown">
                            <button class="user-dropdown-btn">
                                <%= first_name %> <%= last_name %> â–¼
                            </button>
                            <div class="user-dropdown-content">
                                <a href="/dashboard">User Dashboard</a>
                                <a href="/account-info">Account Info</a>
                                <form action="/logout" method="POST" class="dropdown-logout-form">
                                    <button type="submit" class="dropdown-logout-btn">Logout</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <div class="nav-auth">
                        <a href="/login" class="btn-signin">Sign In</a>
                        <a href="/register" class="btn-signup">Sign Up</a>
                    </div>
                <% } %>
                <div class="lang-switcher">
                    <% if (currentLang === 'en') { %>
                        <a href="/lang/es" class="lang-toggle" title="Cambiar a EspaÃ±ol" aria-label="Switch to Spanish">ðŸ‡ªðŸ‡¸</a>
                    <% } else { %>
                        <a href="/lang/en" class="lang-toggle" title="Switch to English" aria-label="Switch to English">ðŸ‡¬ðŸ‡§</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Donate Container -->
    <div class="donate-container">
        <div class="donate-wrapper">
            <!-- Header -->
            <div class="donate-header">
                <h1 class="donate-title">Support Ella Rises</h1>
                <p class="donate-subtitle">Your contribution helps empower young women through culturally rooted educational programs</p>
            </div>

            <!-- Success Message Display -->
            <% if (typeof success_message !== 'undefined' && success_message && success_message.length > 0) { %>
                <div class="success-message" style="background-color: #d4edda; color: #155724; padding: 1rem; border-radius: 8px; margin-bottom: 1.5rem; text-align: center;">
                    <%= success_message %>
                </div>
            <% } %>

            <!-- Error Message Display -->
            <% if (typeof error_message !== 'undefined' && error_message && error_message.length > 0) { %>
                <div class="error-message">
                    <%= error_message %>
                </div>
            <% } %>

            <!-- Donate Form -->
            <form action="/donate" method="POST" class="donate-form">
                <div class="donate-form-grid">
                    <!-- Account Prompt Section (if not logged in) -->
                    <% if (!isLoggedIn) { %>
                        <div class="form-section" style="text-align: center; padding: 2rem;">
                            <h2 class="form-section-title">Donating as Guest</h2>
                            <p class="form-section-subtitle" style="margin-bottom: 1.5rem;">
                                You're donating anonymously. Create an account to track your donation history and receive updates about how your contribution makes an impact.
                            </p>
                            <a href="/register" class="btn-primary" style="display: inline-block; padding: 0.75rem 2rem; text-decoration: none;">
                                Create an Account
                            </a>
                            <p style="margin-top: 1rem; color: var(--color-text-light); font-size: 0.9rem;">
                                Already have an account? <a href="/login" class="auth-link">Sign in here</a>
                            </p>
                        </div>
                    <% } %>

                    <!-- Payment Information Section -->
                    <div class="form-section">
                        <h2 class="form-section-title">Payment Information</h2>
                        <p class="form-section-subtitle" style="color: #6c757d; font-size: 0.9rem; margin-bottom: 1rem;">Demo only - no actual payment will be processed</p>
                        
                        <div class="form-group">
                            <label for="card_name">Name on Card</label>
                            <input
                                type="text"
                                id="card_name"
                                name="card_name"
                                placeholder="John Doe"
                            >
                        </div>

                        <div class="form-group">
                            <label for="card_number">Card Number</label>
                            <input
                                type="text"
                                id="card_number"
                                name="card_number"
                                placeholder="1234 5678 9012 3456"
                                maxlength="19"
                            >
                        </div>

                        <div class="card-details-container">
                            <div class="form-group">
                                <label for="card_expiry">Expiry Date</label>
                                <input
                                    type="text"
                                    id="card_expiry"
                                    name="card_expiry"
                                    placeholder="MM/YY"
                                    maxlength="5"
                                >
                            </div>
                            <div class="form-group">
                                <label for="card_cvv">CVV</label>
                                <input
                                    type="text"
                                    id="card_cvv"
                                    name="card_cvv"
                                    placeholder="123"
                                    maxlength="4"
                                >
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="billing_address">Billing Address</label>
                            <input
                                type="text"
                                id="billing_address"
                                name="billing_address"
                                placeholder="Street Address"
                            >
                        </div>

                        <div class="billing-details-container">
                            <div class="form-group">
                                <label for="billing_city">City</label>
                                <input
                                    type="text"
                                    id="billing_city"
                                    name="billing_city"
                                    placeholder="City"
                                >
                            </div>
                            <div class="form-group">
                                <label for="billing_state">State</label>
                                <input
                                    type="text"
                                    id="billing_state"
                                    name="billing_state"
                                    placeholder="State"
                                    maxlength="2"
                                >
                            </div>
                            <div class="form-group">
                                <label for="billing_zip">ZIP Code</label>
                                <input
                                    type="text"
                                    id="billing_zip"
                                    name="billing_zip"
                                    placeholder="12345"
                                    maxlength="5"
                                >
                            </div>
                        </div>
                    </div>

                    <!-- Donation Amount Section -->
                    <div class="donation-summary">
                        <h2 class="donation-summary-title">Donation Amount</h2>
                        
                        <div class="donation-summary-grid">
                            <!-- Left: Amount Selection -->
                            <div class="donation-summary-left">
                                <!-- Preset Amounts -->
                                <div class="donation-amounts">
                                    <button type="button" class="donation-amount-btn" data-amount="25">$25</button>
                                    <button type="button" class="donation-amount-btn" data-amount="50">$50</button>
                                    <button type="button" class="donation-amount-btn" data-amount="100">$100</button>
                                    <button type="button" class="donation-amount-btn" data-amount="250">$250</button>
                                    <button type="button" class="donation-amount-btn" data-amount="500">$500</button>
                                    <button type="button" class="donation-amount-btn" data-amount="1000">$1000</button>
                                </div>

                                <!-- Custom Amount -->
                                <div class="form-group">
                                    <label for="custom_amount">Custom Amount</label>
                                    <div class="custom-amount-input">
                                        <span class="currency-symbol">$</span>
                                        <input
                                            type="number"
                                            id="custom_amount"
                                            name="donation_amount"
                                            placeholder="0.00"
                                            min="1"
                                            step="0.01"
                                            required
                                        >
                                    </div>
                                </div>
                            </div>

                            <!-- Right: Amount Display & Submit -->
                            <div class="donation-summary-right">
                                <!-- Selected Amount Display -->
                                <div class="selected-amount-display">
                                    <div class="amount-label">Your Donation</div>
                                    <div class="amount-value" id="selected-amount">$0.00</div>
                                </div>

                                <!-- Submit Button -->
                                <button type="submit" class="donate-submit-btn">
                                    Complete Donation
                                </button>

                                <!-- Security Note -->
                                <p class="security-note">
                                    ðŸ”’ Your payment information is secure and encrypted
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
