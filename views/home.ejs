    <!-- Programs Section -->
    <section class="programs">
        <div class="section-header">
            <h2>Join Programs</h2>
            <p>Our signature programs and the Ella Rises Summit serve over 150 women each year.</p>
        </div>
        <div class="program-grid">
            <div class="program-flip-card" data-program="mariachi">
                <div class="program-flip-inner">
                    <div class="program-flip-front">
                        <img src="/public/images/mariachi.jpeg" alt="Mariachi Program">
                    </div>
                    <div class="program-flip-back">
                        <h3>Mariachi</h3>
                        <p>Connect with cultural heritage through traditional music and performance.</p>
                    </div>
                </div>
            </div>
            <div class="program-flip-card" data-program="ballet">
                <div class="program-flip-inner">
                    <div class="program-flip-front">
                        <img src="/public/images/ballet_folklorico1.jpeg" alt="Ballet Folklorico Program">
                    </div>
                    <div class="program-flip-back">
                        <h3>Ballet Folklorico</h3>
                        <p>Celebrate Mexican culture through vibrant dance and storytelling.</p>
                    </div>
                </div>
            </div>
            <div class="program-flip-card" data-program="steam">
                <div class="program-flip-inner">
                    <div class="program-flip-front">
                        <img src="/public/images/ER STEM Workshop Aug 2022-03.jpg" alt="STEAM Workshops Program">
                    </div>
                    <div class="program-flip-back">
                        <h3>STEAM Workshops</h3>
                        <p>Hands-on learning in Science, Technology, Engineering, Art, and Math.</p>
                    </div>
                </div>
            </div>
            <div class="program-flip-card" data-program="summit">
                <div class="program-flip-inner">
                    <div class="program-flip-front">
                        <img src="/public/images/summer_summit2.jpg" alt="Ella Rises Summit Program">
                    </div>
                    <div class="program-flip-back">
                        <h3>Ella Rises Summit</h3>
                        <p>Annual gathering focused on higher education and leadership development.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

