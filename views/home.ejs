    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h2 class="hero-tagline">Empowering the future generation of women.</h2>
            <p class="hero-mission">Inviting young women to pursue higher education and embrace their heritage by providing culturally rooted programs and educational experiences.</p>
            <div class="hero-cta">
                <a href="/events" class="btn-primary">Join Our Events</a>
                <a href="/donate" class="btn-secondary">Support Our Mission</a>
            </div>
        </div>
        <div class="hero-image">
            <img src="/public/images/woman_holding_books_illustration_transparent2.png" alt="Woman holding books illustration">
        </div>
    </section>

    <!-- Impact Section -->
    <section class="impact-hero">
        <div class="impact-hero-content">
            <div class="impact-hero-header">
