    <!-- Registrations Container -->
    <div class="manage-donations-container">
        <div class="manage-donations-wrapper">
            <!-- Page Header -->
            <div class="manage-donations-header">
                <h1 class="manage-donations-title">Your Registrations</h1>
                <p class="manage-donations-subtitle">View your registered events</p>
            </div>
            <!-- Error Message Display -->
            <% if (typeof error_message !== 'undefined' && error_message && error_message.length > 0) { %>
                <div class="error-message">
                    <%= error_message %>
                </div>
            <% } %>
            <!-- Registrations Table -->
            <% if (registrations && registrations.length > 0) { %>
                <div class="donations-table-container">
                    <table class="donations-table">
                        <thead>
                            <tr>
                                <th>Event Name</th>
                                <th>Event Date</th>
                                <th>Registration Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% registrations.forEach(function(registration) { %>
                                <tr>
                                    <td><%= registration.event_name %></td>
                                    <td>
                                        <% 
                                            const dateStart = new Date(registration.event_date_time_start);
                                            const dateEnd = new Date(registration.event_date_time_end);
                                            const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
                                            // Helper for 12-hour time with am/pm
                                            function formatTime(dateObj) {
                                                let hours = dateObj.getHours();
                                                let minutes = dateObj.getMinutes();
                                                let ampm = hours >= 12 ? 'PM' : 'AM';
                                                hours = hours % 12;
                                                hours = hours ? hours : 12; // the hour '0' should be '12'
                                                minutes = minutes < 10 ? '0' + minutes : minutes;
                                                return hours + ':' + minutes + ' ' + ampm;
                                            }
                                            const formattedDate = months[dateEnd.getMonth()] + ' ' + dateEnd.getDate() + ', ' + dateEnd.getFullYear();
                                            const startTime = formatTime(dateStart);
                                        %>
                                        <% 
                                            // Get short timezone string, e.g., "PDT", "MST"
                                            function getShortTimezone(dateObj) {
                                                const full = dateObj.toLocaleTimeString('en-us', { timeZoneName: 'short' });
                                                const match = full.match(/([A-Z]{2,5})$/);
                                                return match ? match[1] : '';
                                            }
                                            const timezone = getShortTimezone(dateEnd);
                                        %>
                                        <span style="color: #888;">
                                            <%= formattedDate %> @ <%= startTime %> <%= timezone %>
                                        </span>
                                    </td>
                                <td>
                                    <% if (registration.registration_status !== 'cancelled' && registration.registration_status !== 'attended' && registration.registration_status !== 'no-show') { %>
                                        <div style="display: flex; justify-content: flex-end;">
                                            <form action="/registrations/<%= registration.registration_id %>/cancel" method="POST" style="display:inline;" class="cancel-registration-form" data-registration-id="<%= registration.registration_id %>">
                                                <button type="submit"
                                                    class="btn-cancel-registration"
                                                    style="background-color:#dc3545; color:white; border:none; padding:7px 16px; border-radius:4px; font-size:1em; cursor:pointer; transition:background 0.2s;"
                                                >
                                                    Cancel Registration
                                                </button>
                                            </form>
                                        </div>
                                    <% } else if (registration.registration_status === 'cancelled') { %>
                                        <span style="color: #888;">Cancelled</span>
                                    <% } else if (registration.registration_status === 'attended') { %>
                                        <span style="color: #28a745; font-weight: 600;">Attended</span>
                                    <% } else if (registration.registration_status === 'no-show') { %>
                                        <span style="color: #888;">No-Show</span>
                                    <% } else { %>
                                        <span style="color: #888;">Registered</span>
                                    <% } %>
                                </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <p class="empty-state-message">No registrations found.</p>
                </div>
            <% } %>
            </div>
        </div>
    </div>

