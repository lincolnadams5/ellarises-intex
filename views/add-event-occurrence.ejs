    <!-- Breadcrumb -->
    <div class="breadcrumb">
        <a href="/manage-event-occurrences">‚Üê Back to Manage Event Occurrences</a>
    </div>

    <div class="manage-donations-container">
        <div class="manage-donations-wrapper">
            <div class="manage-donations-header">
                <h1 class="manage-donations-title">Add Event Occurrence</h1>
                <p class="manage-donations-subtitle">Create a new event occurrence</p>
            </div>

            <% if (typeof error_message !== 'undefined' && error_message && error_message.length > 0) { %>
                <div class="error-message"><%= error_message %></div>
            <% } %>

            <div id="validation-error" class="error-message" style="display: none;"></div>

            <form action="/manage-event-occurrences/new" method="POST" class="form" id="occurrence-form">
                <div class="form-group">
                    <label for="event_template_id">Event Template *</label>
                    <select id="event_template_id" name="event_template_id" required>
                        <option value="">-- Select an Event Template --</option>
                        <% templates.forEach(function(template) { %>
                            <option 
                                value="<%= template.event_template_id %>" 
                                data-default-capacity="<%= template.event_default_capacity || '' %>"
                                data-template-name="<%= template.event_name %>"
                            >
                                <%= template.event_name %>
                            </option>
                        <% }); %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="event_name">Event Occurrence Name *</label>
                    <input type="text" id="event_name" name="event_name" placeholder="Enter a name for this occurrence" required>
                </div>

                <div class="form-group">
                    <label for="event_date_time_start">Start Date & Time *</label>
                    <input type="datetime-local" id="event_date_time_start" name="event_date_time_start" required>
                </div>

                <div class="form-group">
                    <label for="event_date_time_end">End Date & Time *</label>
                    <input type="datetime-local" id="event_date_time_end" name="event_date_time_end" required>
                </div>

                <div class="form-group">
                    <label for="event_location">Location *</label>
                    <input type="text" id="event_location" name="event_location" placeholder="Enter event location" required>
                </div>

                <div class="form-group">
                    <label for="event_capacity">Capacity *</label>
                    <input type="number" id="event_capacity" name="event_capacity" min="1" placeholder="Enter capacity" required>
                </div>

                <div class="form-group">
                    <label for="event_registration_deadline">Registration Deadline (Optional)</label>
                    <input type="datetime-local" id="event_registration_deadline" name="event_registration_deadline">
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-primary">Save Event Occurrence</button>
                    <a href="/manage-event-occurrences" class="btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>

