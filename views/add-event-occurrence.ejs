    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // User dropdown functionality
            const userDropdown = document.querySelector('.user-dropdown');
            const dropdownBtn = document.querySelector('.user-dropdown-btn');

            if (dropdownBtn) {
                dropdownBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    userDropdown.classList.toggle('active');
                });
            }

            document.addEventListener('click', function(e) {
                if (userDropdown && !userDropdown.contains(e.target)) {
                    userDropdown.classList.remove('active');
                }
            });

            // Auto-fill capacity when template is selected
            const templateSelect = document.getElementById('event_template_id');
            const capacityInput = document.getElementById('event_capacity');
            const eventNameInput = document.getElementById('event_name');

            templateSelect.addEventListener('change', function() {
                const selectedOption = this.options[this.selectedIndex];
                const defaultCapacity = selectedOption.getAttribute('data-default-capacity');
                const templateName = selectedOption.getAttribute('data-template-name');
                
                if (defaultCapacity) {
                    capacityInput.value = defaultCapacity;
                }
                
                // Optionally pre-fill event name with template name
                if (templateName && !eventNameInput.value) {
                    eventNameInput.value = templateName;
                }
            });

            // Form validation
            const form = document.getElementById('occurrence-form');
            const validationError = document.getElementById('validation-error');
            const startInput = document.getElementById('event_date_time_start');
            const endInput = document.getElementById('event_date_time_end');
            const deadlineInput = document.getElementById('event_registration_deadline');

            form.addEventListener('submit', function(e) {
                validationError.style.display = 'none';
                validationError.textContent = '';

                const startDate = new Date(startInput.value);
                const endDate = new Date(endInput.value);
                const capacity = parseInt(capacityInput.value, 10);

                // Validate capacity
                if (isNaN(capacity) || capacity < 1) {
                    e.preventDefault();
                    validationError.textContent = 'Capacity must be a positive number greater than 0.';
                    validationError.style.display = 'block';
                    capacityInput.focus();
                    return;
                }

                // Validate start date is before end date
                if (startDate >= endDate) {
                    e.preventDefault();
                    validationError.textContent = 'Start date/time must be before end date/time.';
                    validationError.style.display = 'block';
                    startInput.focus();
                    return;
                }

                // Validate registration deadline is before start date (if provided)
                if (deadlineInput.value) {
                    const deadlineDate = new Date(deadlineInput.value);
                    if (deadlineDate >= startDate) {
                        e.preventDefault();
                        validationError.textContent = 'Registration deadline must be before the start date/time.';
                        validationError.style.display = 'block';
                        deadlineInput.focus();
                        return;
                    }
                }
            });
        });
    </script>
</body>
